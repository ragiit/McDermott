@page "/queue/viewdisplay/{DisplayId:long}"
@page "/queue/viewdisplay/"
@rendermode InteractiveServer

<PageTitle>McHealthCare - View Display</PageTitle>

<div class="wrapper">
     <section class="content"> 

    <div class="row">
        <div class="col">
            <div class="card ">
                <div class="card-body bg-gradient-info rounded text-light">
                    <div class="row justify-content-between">
                        <div class="col-4 ">
                            <h3 class="mt-2">McHealthCare</h3>
                            <p class="mb-0">
                                Jalan Bawal No. 1 – Batu Ampar
                                Batam Island 29452, Riau Islands Province
                            </p>
                            <p class="mb-0">Phone. +62 778 411001</p>
                        </div>

                        <div class="col-4 align-self-center">
                            <h5 class="text-center">@DateOnly.FromDateTime(DateTime.Now).ToString("dd MMMM yyyy", indonesianCulture)</h5>
                            <h1 class="text-center">@currentTime</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center">
            @foreach (var view in getCount.Take(2))
            {

                List<KioskQueueDto> filteredQueues = new();
                long? count = 0;
                if (view.ServiceId == null && view.ServiceKId != null)
                {
                    filteredQueues = kioskQueues.Where(x => x.ServiceKId == view.ServiceKId && x.CreatedDate.Value.Date == DateTime.Now.Date && (x.QueueStage == null || x.QueueStage == "call" || x.QueueStage == "present")).ToList();
                    count = QueueNumber.Where(n => n.ServicekId == view.ServiceKId).OrderByDescending(x => x.CreateDate).Select(x => x.NumberQueue).LastOrDefault();

                }
                else if (view.ServiceId != null && view.ServiceKId != null)
                {
                    filteredQueues = kioskQueues.Where(x => x.ServiceKId == view.ServiceKId && x.ServiceId == view.ServiceId && x.CreatedDate.Value.Date == DateTime.Now.Date && (x.QueueStage == null || x.QueueStage == "call" || x.QueueStage == "present")).ToList();
                    count = QueueNumber.Where(n => n.ServicekId == view.ServiceKId).OrderByDescending(x => x.CreateDate).Select(x => x.NumberQueue).LastOrDefault();

                }

                @* var filteredQueues = kioskQueues.Where(q => q.ServiceKId == view.ServiceKId && q.ServiceId == view.ServiceId && (q.QueueStage == null || q.QueueStage == "call" || q.QueueStage == "present")).ToList(); *@
                @* count = filteredQueues.Where(n =>n.ServiceKId == view.ServiceKId).Select(x => x.QueueNumber).FirstOrDefault(); *@
                @*                 var count = QueueNumber.Where(n => n.ServicekId == view.ServiceKId).OrderByDescending(x => x.CreateDate).Select(x => x.NumberQueue).LastOrDefault();
            *@

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-gradient-info py-0">
                            <h3 class="text-center text-light">Counter @view.Name</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    @if (filteredQueues.Count == 0)
                                    {
                                        count = null;
                                    }
                                    <h1 class="text-center fw-bolder" style="font-size:120px"> @((count ?? 0).ToString("D3"))</h1>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <DxLoadingPanel @bind-Visible="PanelVisible"
                                                    IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                                    IsContentBlocked="true"
                                                    ApplyBackgroundShading="true"
                                                    IndicatorAreaVisible="false"
                                                    Text="Fetching Data...">
                                        <DxGrid @ref="Grid"
                                                Data="@filteredQueues"
                                                ColumnResizeMode="GridColumnResizeMode.NextColumn"
                                                AllowSelectRowByClick="true"
                                                PagerPosition="GridPagerPosition.Bottom"
                                                PageSizeSelectorAllRowsItemVisible="true"
                                                PagerSwitchToInputBoxButtonCount="10"
                                                PagerVisibleNumericButtonCount="10"
                                                CustomizeElement="Grid_CustomizeElement"
                                                KeyboardNavigationEnabled="true">

                                            <Columns>
                                                <DxGridDataColumn FieldName="QueueNumber" Caption="No" DisplayFormat="{0:000}" Width="10px" SortIndex="0" />
                                                <DxGridDataColumn FieldName="Kiosk.Patient.Name" Caption="Patient Name" />
                                                <DxGridDataColumn FieldName="Service.Name" Caption="Service Name" />
                                                <DxGridDataColumn FieldName="QueueStatus" Caption="Status" />
                                            </Columns>
                                        </DxGrid>
                                    </DxLoadingPanel>
                                </div>
                            </div>
                        </div>
                       @*  <div class="card-footer bg-gradient-success py-0">
                            <h3 class="text-center text-light">@view.Name</h3>
                        </div> *@
                    </div>
                </div>
            }
        </div>
    </div>
     </section> 
</div>

<script>
    window.openFullScreen = function () {
        if (document.fullscreenElement) {
            document.exitFullscreen();
        } else {
            document.documentElement.requestFullscreen().catch((err) => {
                console.log(`Error attempting to enable full-screen mode: ${err.message} (${err.name})`);
            });
        }
    };
</script>