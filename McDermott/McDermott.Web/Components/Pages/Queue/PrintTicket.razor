@page "/print-ticket"
@* PrintTicket.razor *@

<div class="ticket">
    <div class="header">
        <h1>Nomor Antrian</h1>
    </div>
    <div class="content">
        <div class="number">@ticketNumber</div>
        <div class="info">
            <p>Silakan menunggu panggilan Anda</p>
            <p>Terima kasih</p>
        </div>
    </div>
    <div class="footer">
        <p>Contoh Klinik</p>
        <p>Jl. Contoh No. 123</p>
        <p>Telp: (021) 123-4567</p>
    </div>
</div>

@code {
    // Add any code-behind logic here if needed
    private string ticketNumber = "A002";
}
<script>
    window.onload = function () {
        window.print();
        window.close();
    }
</script>