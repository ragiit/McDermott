@page "/user"
@using static McDermott.Web.Helper
@rendermode InteractiveServer

<PageTitle>User</PageTitle>

<div class="wrapper">

    <McDermott.Web.Components.Layout.BaseContentHeaderLayout Title="User" />

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card">
                        @*  <DxGrid @ref="Grid"
