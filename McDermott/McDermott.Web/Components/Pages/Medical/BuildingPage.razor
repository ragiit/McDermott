                                               InputId="tbOverview" />

                                    @*    <label for="tbOverview3" class="demo-text cw-320 mb-1 mt-2">
                            Code
                            </label>

                            <DxTextBox @bind-Text="@Building.Code"
                            NullText="Code"
                            InputId="tbOverview3" /> *@

                                    <p for="tbOverview2"> Health Center</p>

                                    <DxComboBox ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                        Data="@HealthCenters"
                                                NullText="Select Health Center..."
                                                FilteringMode="@DataGridFilteringMode.Contains"
                                                @bind-Value="@Building.HealthCenterId"
                                                TextFieldName="Name"
                                                InputId="tbOverview2"
                                                ValueFieldName="Id">
                                    </DxComboBox>

