                            <Columns>
                            <DxGridSelectionColumn Width="15px" />
                            <DxGridDataColumn FieldName="Name" SortIndex="0" />
                            <DxGridDataColumn FieldName="Code" />
                            </Columns>
                            <EditFormTemplate Context="EditFormContext">
                            @{
                            var a = (BuildingDto)EditFormContext.EditModel;
                            }
                            <DxFormLayout CssClass="w-100">
                            <DxFormLayoutItem CaptionCssClass="required-caption" Caption="Name:" ColSpanMd="12">
                            <DxTextBox @bind-Text="@a.Name" NullText="Name" ShowValidationIcon="true" />
                            </DxFormLayoutItem>
                            <DxFormLayoutItem CaptionCssClass="required-caption" Caption="Code:" ColSpanMd="12">
                            <DxTextBox @bind-Text="@a.Code" NullText="Name" ShowValidationIcon="true" />
                            </DxFormLayoutItem>
                            <DxFormLayoutItem Caption="Health Center:" ColSpanMd="12">
                            <Template>
                            <DxComboBox Data="@HealthCenters"
                            NullText="Select Health Center..."
