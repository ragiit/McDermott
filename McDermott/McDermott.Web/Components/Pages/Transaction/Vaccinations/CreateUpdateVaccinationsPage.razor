@page "/clinic-service/vaccinations/{PageMode}"

@using McDermott.Web.Components.Layout
@using McDermott.Web.Components.Popups
@rendermode InteractiveServer

<PageTitle>McHealthCare - Vaccinations</PageTitle>

@if (IsAccess && UserAccessCRUID is not null && (UserAccessCRUID.IsCreate || UserAccessCRUID.IsUpdate))
{
    <div class="wrapper">

        <BaseHeaderPage Title="Vaccinations" OnClickBack="@(async () => NavigationManager.NavigateTo(FormUrl))" ShowBackButton="true" />

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <DxLoadingPanel @bind-Visible="IsLoading"
                                        IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                        IsContentBlocked="true"
                                        ApplyBackgroundShading="true"
                                        IndicatorAreaVisible="false"
                                        Text="Fetching Data...">
                            <EditForm Model="@GeneralConsultanService"
                                      @onkeypress="@KeyPressHandler"
                                      Context="EditFormContext22" Enhance
                                      OnValidSubmit="HandleValidSubmit"
                                      OnInvalidSubmit="@HandleInvalidSubmit">

                                <DataAnnotationsValidator />
                                <ValidationSummary />
                                <AntiforgeryToken />

                                <div class="row justify-content-end mb-3">
                                    <div class="col-auto align-self-end">
                                        <DxTabs>
                                            <DxTab Text="Planned" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Planned)"></DxTab>
                                            <DxTab Text="Confirmed" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Confirmed)"></DxTab>
                                            <DxTab Text="Nurse Station" Enabled="@IsStatus(EnumStatusGeneralConsultantService.NurseStation)"></DxTab>
                                            <DxTab Text="Finished" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Finished)"></DxTab>
                                            <DxTab Text="Canceled" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Canceled)"></DxTab>
                                        </DxTabs>
                                    </div>
                                </div>

                                @if (GeneralConsultanService.Status != EnumStatusGeneralConsultantService.ProcedureRoom && GeneralConsultanService.Status != EnumStatusGeneralConsultantService.Finished && GeneralConsultanService.Status != EnumStatusGeneralConsultantService.Canceled)
                                {
                                    bool showButtons = (GeneralConsultanService.Status == EnumStatusGeneralConsultantService.ProcedureRoom || GeneralConsultanService.Status == EnumStatusGeneralConsultantService.Physician)
                                    ? (GeneralConsultanMedicalSupport.Status == EnumStatusGeneralConsultantServiceProcedureRoom.Finish || GeneralConsultanMedicalSupport.Id == 0)
                                    : true;

                                    if (showButtons)
                                    {
                                        <div class="card sticky">
                                            <div class="card-body">
                                                <div class=" row w-100">
                                                    <div class="col-auto pe-0 ">
                                                        <DxButton Enabled="!IsLoading"
                                                                  IconCssClass="fa-solid fa-check"
                                                                  Text="@StagingText.GetDisplayName()"
                                                                  Click="(async () => await OnClickConfirm(false,false))"
                                                                  Visible="@(!(GeneralConsultanService.Status == EnumStatusGeneralConsultantService.Waiting && Convert.ToBoolean(UserLogin.IsNurse)))"
                                                                  RenderStyle="ButtonRenderStyle.Primary">
                                                        </DxButton>
                                                        <DxButton Visible="@(GeneralConsultanService.Id > 0)"
                                                                  Enabled="!IsLoading"
                                                                  IconCssClass="fa-solid fa-xmark"
                                                                  Text="Cancel"
                                                                  Click="OnCancelStatus"
                                                                  RenderStyle="ButtonRenderStyle.Danger">
                                                        </DxButton>
                                                    </div>
                                                    @if (GeneralConsultanService.Id > 0)
                                                    {
                                                        <div class="col-sm-4 ">
                                                            <DxToolbar ItemRenderStyleMode="ToolbarRenderStyleMode.Contained">
                                                                <DxToolbarItem Text="Print" BeginGroup="true" RenderStyle="ButtonRenderStyle.Success" CssClass="rounded-button" IconCssClass="fa-solid fa-print">
                                                                    <Items>
                                                                        <DxToolbarItem IconCssClass="fa-solid fa-file-arrow-down" Text="SLIP" GroupName="italic" Click="OnPrint" />
                                                                        @if (GeneralConsultanService.IsSickLeave == true || GeneralConsultanService.IsMaternityLeave == true)
                                                                        {
                                                                            <DxToolbarItem IconCssClass="fa-solid fa-file-arrow-down" Text="SickLeave" Click="(()=>SendToPrint(GeneralConsultanService.Id))" />
                                                                        }
                                                                    </Items>
                                                                </DxToolbarItem>

                                                            </DxToolbar>
                                                        </div>
                                                    }

                                                    @if (!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Waiting) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Confirmed) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Finished) && !GeneralConsultanService.StatusName.Equals("Canceled"))
                                                    {
                                                        <div class="col-sm align-self-end">
                                                            <div class="row justify-content-end">
                                                                <div class="col-auto">
                                                                    <DxButton Enabled="!IsLoading" RenderStyle="ButtonRenderStyle.Primary" RenderStyleMode="@ButtonRenderStyleMode.Contained" IconCssClass="fa-solid fa-floppy-disk" Text="Save" SubmitFormOnClick="true"></DxButton>
                                                                    <DxButton RenderStyle="ButtonRenderStyle.Danger" RenderStyleMode="@ButtonRenderStyleMode.Contained" IconCssClass="fa-solid fa-xmark" Text="Close" Click="OnCancelBack"></DxButton>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }

                                @if (GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation))
                                {
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="w-100">
                                                <DxToolbar Title="Actions" ItemRenderStyleMode="ToolbarRenderStyleMode.Contained" AdaptivityMinRootItemCount="2" AdaptivityAutoHideRootItems="true" AdaptivityAutoCollapseItemsToIcons="true">
                                                    <Items>
                                                        <DxToolbarItem Alignment="ToolbarItemAlignment.Left" BeginGroup="true"
                                                                       IconCssClass="fa-solid fa-notes-medical"
                                                                       Click="OnReferToClick"
                                                                       Text="Refer To" />

                                                        <DxToolbarItem Alignment="ToolbarItemAlignment.Left" BeginGroup="true"
                                                                       IconCssClass="fa-solid fa-notes-medical"
                                                                       Click="OnClickReferralPrescriptionConcoction"
                                                                       Text="Referral Prescription & Concoction" />
                                                    </Items>
                                                </DxToolbar>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <_BaseGeneralConsultationServiceInformationLayoutComponent GeneralConsultanService="GeneralConsultanService"
                                                                                           OnUserFormChanged="HandleUserFormChanged"
                                                                                           IsVaccination="true"
                                                                                           UserForm="UserForm"
                                                                                           ReadOnlyForm="ReadOnlyForm" />

                                @* History Medical *@
                                <div class="w-100">
                                    <div class="card">
                                        <div class="card-header">
                                            <span class="fw-bolder">History</span>
                                        </div>

                                        <div class="card-body">
                                            <div class="w-100">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <span class="fw-bolder">Allergy Data</span>
                                                    </div>

                                                    <div class="card-body">
                                                        <DxFormLayout CssClass="w-100">
                                                            <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Weather" ColSpanMd="12">
                                                                <div class="row w-100">
                                                                    <div class="col-md-1">
                                                                        <DxCheckBox @bind-Checked="@UserForm.IsWeatherPatientAllergyIds"
                                                                                    ReadOnly="ReadOnlyForm()" />
                                                                    </div>
                                                                    <div class="col-md-11">
                                                                        @if (UserForm.IsWeatherPatientAllergyIds)
                                                                        {
                                                                            <DxTagBox Data="@WeatherAllergies"
                                                                                      NullText="Select Allergy"
                                                                                      @bind-Values="@SelectedWeatherAllergies"
                                                                                      ReadOnly="ReadOnlyForm()"
                                                                                      EditFormat="{0}"
                                                                                      InputId="tbMultiColumn">
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.NmAllergy)"
                                                                                                    Caption="Name" />
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.KdAllergy)"
                                                                                                    Caption="Code"
                                                                                                    Width="100px" />
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.TypeString)"
                                                                                                    Caption="Type" />
                                                                            </DxTagBox>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </DxFormLayoutItem>

                                                            <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Pharmacology" ColSpanMd="12">
                                                                <div class="row w-100">
                                                                    <div class="col-md-1">
                                                                        <DxCheckBox @bind-Checked="@UserForm.IsPharmacologyPatientAllergyIds"
                                                                                    ReadOnly="ReadOnlyForm()" />
                                                                    </div>
                                                                    <div class="col">
                                                                        @if (UserForm.IsPharmacologyPatientAllergyIds)
                                                                        {
                                                                            <DxTagBox Data="@PharmacologyAllergies"
                                                                                      NullText="Select Allergy"
                                                                                      @bind-Values="@SelectedPharmacologyAllergies"
                                                                                      ReadOnly="ReadOnlyForm()"
                                                                                      EditFormat="{0}"
                                                                                      InputId="tbMultiColumn">
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.NmAllergy)"
                                                                                                    Caption="Name" />
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.KdAllergy)"
                                                                                                    Caption="Code"
                                                                                                    Width="100px" />
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.TypeString)"
                                                                                                    Caption="Type" />
                                                                            </DxTagBox>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </DxFormLayoutItem>

                                                            <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Food" ColSpanMd="12">
                                                                <div class="row w-100">
                                                                    <div class="col-md-1">
                                                                        <DxCheckBox @bind-Checked="@UserForm.IsFoodPatientAllergyIds"
                                                                                    ReadOnly="ReadOnlyForm()" />
                                                                    </div>
                                                                    <div class="col-md-11">
                                                                        @if (UserForm.IsFoodPatientAllergyIds)
                                                                        {
                                                                            <DxTagBox Data="@FoodAllergies"
                                                                                      NullText="Select Allergy"
                                                                                      ReadOnly="ReadOnlyForm()"
                                                                                      @bind-Values="@SelectedFoodAllergies"
                                                                                      EditFormat="{0}"
                                                                                      InputId="tbMultiColumn">
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.NmAllergy)"
                                                                                                    Caption="Name" />
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.KdAllergy)"
                                                                                                    Caption="Code"
                                                                                                    Width="100px" />
                                                                                <DxListEditorColumn FieldName="@nameof(AllergyDto.TypeString)"
                                                                                                    Caption="Type" />
                                                                            </DxTagBox>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </DxFormLayoutItem>

                                                        </DxFormLayout>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="w-100 mt-2">
                                                <div class="row w-100">
                                                    <div class="col-md-6">
                                                        <DxFormLayout CssClass="w-100">
                                                            <DxFormLayoutItem Caption="Family Medical History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                <Template>
                                                                    <DxGridLayout ColumnSpacing="8px">
                                                                        <Rows>
                                                                            <DxGridLayoutRow />
                                                                        </Rows>
                                                                        <Columns>
                                                                            <DxGridLayoutColumn />
                                                                            <DxGridLayoutColumn />
                                                                        </Columns>
                                                                        <Items>
                                                                            <DxGridLayoutItem Row="0" Column="0" CssClass="normal-caption" ColumnSpan="1">
                                                                                <Template>
                                                                                    <MyDxComboBox Data="@Helper.YesNoOptions"
                                                                                                  NullText="Yes/No"
                                                                                                  ReadOnly="ReadOnlyForm()"
                                                                                                  @bind-Value="@UserForm.IsFamilyMedicalHistory">
                                                                                    </MyDxComboBox>
                                                                                </Template>
                                                                            </DxGridLayoutItem>
                                                                            <DxGridLayoutItem Row="0" Visible="@(UserForm.IsFamilyMedicalHistory == "Yes")" Column="1" CssClass=" normal-caption " ColumnSpan="12">
                                                                                <Template>
                                                                                    <MyDxComboBox Data="@Helper.RiwayatPenyakitKeluarga"
                                                                                                  NullText="Select Family Medical History..."
                                                                                                  ReadOnly="ReadOnlyForm()"
                                                                                                  @bind-Value="@UserForm.FamilyMedicalHistory">
                                                                                    </MyDxComboBox>
                                                                                </Template>
                                                                            </DxGridLayoutItem>
                                                                        </Items>
                                                                    </DxGridLayout>
                                                                </Template>
                                                            </DxFormLayoutItem>

                                                            <DxFormLayoutItem Caption=" " Visible="@(UserForm.FamilyMedicalHistory is not null && UserForm.FamilyMedicalHistory.Equals("Other"))" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                <MyTextBox @bind-Text="@UserForm.FamilyMedicalHistoryOther"
                                                                           ReadOnly="ReadOnlyForm()"
                                                                           NullText="Family MedicalHistory Other" />
                                                            </DxFormLayoutItem>


                                                            <DxFormLayoutItem Caption="Medication History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                <Template>
                                                                    <DxGridLayout ColumnSpacing="8px">
                                                                        <Rows>
                                                                            <DxGridLayoutRow />
                                                                        </Rows>
                                                                        <Columns>
                                                                            <DxGridLayoutColumn />
                                                                            <DxGridLayoutColumn />
                                                                        </Columns>
                                                                        <Items>
                                                                            <DxGridLayoutItem Row="0" Column="0" CssClass="normal-caption" ColumnSpan="1">
                                                                                <Template>
                                                                                    <MyDxComboBox Data="@Helper.YesNoOptions"
                                                                                                  ReadOnly="ReadOnlyForm()"
                                                                                                  NullText="Yes/No"
                                                                                                  @bind-Value="@UserForm.IsMedicationHistory">
                                                                                    </MyDxComboBox>
                                                                                </Template>
                                                                            </DxGridLayoutItem>
                                                                            <DxGridLayoutItem Visible="@(UserForm.IsMedicationHistory == "Yes")" Row="0" Column="1" CssClass=" normal-caption " ColumnSpan="12">
                                                                                <Template>
                                                                                    <MyTextBox @bind-Text="@UserForm.MedicationHistory"
                                                                                               ReadOnly="ReadOnlyForm()"
                                                                                               NullText="Medication History" />
                                                                                </Template>
                                                                            </DxGridLayoutItem>
                                                                        </Items>
                                                                    </DxGridLayout>
                                                                </Template>
                                                            </DxFormLayoutItem>

                                                            <DxFormLayoutItem Caption="Past Medical History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                <MyTextBox @bind-Text="@UserForm.PastMedicalHistory"
                                                                           ReadOnly="ReadOnlyForm()"
                                                                           NullText="Past Medical History" />
                                                            </DxFormLayoutItem>

                                                        </DxFormLayout>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @* Clinical Assesment *@
                                @if (!(IsStatus(EnumStatusGeneralConsultantService.Planned) || IsStatus(EnumStatusGeneralConsultantService.Confirmed)))
                                {
                                    <div class="w-100">
                                        <div class="card">
                                            <div class="card-body">
                                                <DxTabs>
                                                    @* Clinical Assesment *@
                                                    <_BaseGeneralConsultationServiceClinicalAssesmentLayoutComponent ReadOnlyForm="ReadOnlyForm"
                                                                                                                     GeneralConsultanService="GeneralConsultanService" />

                                                    @* CPPT *@
                                                    <_BaseGeneralConsultationServiceCPPTsLayoutComponent GeneralConsultanService="GeneralConsultanService"
                                                                                                         UserLogin="UserLogin" />

                                                    <DxTabPage Click="@(async () => await LoadVaccinationGivens())" CssClass="w-100" Text="Vaccination">
                                                        <DxTabs>
                                                            <DxTabPage Click="@(async () => await LoadVaccinationGivens())" CssClass="w-100" Text="Vaccination Given">
                                                                <DxFormLayout>
                                                                    <DxFormLayoutGroup Caption="Vaccination Given" ColSpanMd="12" ExpandButtonDisplayMode="GroupExpandButtonDisplayMode.Start" AnimationType="LayoutAnimationType.Slide">
                                                                        <Items>
                                                                            <DxLoadingPanel @bind-Visible="IsLoadingVaccinationGiven"
                                                                                            IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                                                                            IsContentBlocked="true"
                                                                                            ApplyBackgroundShading="true"
                                                                                            IndicatorAreaVisible="false"
                                                                                            Text="Fetching Data...">
                                                                                <MyGrid @ref="GridVaccinationGiven"
                                                                                        Data="VaccinationGivens"
                                                                                        @bind-SelectedDataItems="@SelectedDataVaccinationGivenItems"
                                                                                        EditModelSaving="SaveVaccinationGiven"
                                                                                        RowDoubleClick="@(async () => await EditItemDetailVaccinationGiven_Click(GridVaccinationGiven))"
                                                                                        DataItemDeleting="OnDeleteVaccinationGiven"
                                                                                        FocusedRowChanged="GridDetailVaccinationGiven_FocusedRowChanged"
                                                                                        KeyFieldName="Id">

                                                                                    <ToolbarTemplate>
                                                                                        <DxToolbar ItemRenderStyleMode="ToolbarRenderStyleMode.Plain" hidden="@(GeneralConsultanService.Status == EnumStatusGeneralConsultantService.Finished)">
                                                                                            <DxToolbarItem Text="New" Click="NewItemDetailVaccinationGiven_Click" IconCssClass="fa-solid fa-plus" />
                                                                                            <DxToolbarItem Text="Edit" Click="async () => await EditItemDetailVaccinationGiven_Click(context.Grid)" IconCssClass="fa-solid fa-pen-to-square" Enabled="SelectedDataVaccinationGivenItems.Count > 0 && VaccinationGivens.Count > 0 " />
                                                                                            <DxToolbarItem Text="Delete" Click="(() =>    GridVaccinationGiven.ShowRowDeleteConfirmation(FocusedRowVisibleIndexVaccinationGiven))" IconCssClass="fa-solid fa-trash" Enabled="SelectedDataVaccinationGivenItems.Count > 0 && VaccinationGivens.Count > 0" />
                                                                                            <DxToolbarItem BeginGroup="true" Text="Refresh" Click="(async () => await LoadVaccinationGivens())" IconCssClass="fa-solid fa-arrows-rotate" />
                                                                                            <DxToolbarItem Text="Column Chooser" Click="(() => GridExtention.ColumnChooserButton_Click(GridVaccinationGiven))" BeginGroup="true" IconCssClass="fa-solid fa-table-columns" />
                                                                                            <DxToolbarItem Text="Export" BeginGroup="true" IconCssClass="fa-solid fa-file-export">
                                                                                                <Items>
                                                                                                    <DxToolbarItem Text="To CSV" Click="(() => GridExtention.ExportCsvItem_Click(GridVaccinationGiven))" />
                                                                                                    <DxToolbarItem Text="To XLSX" Click="(() => GridExtention.ExportXlsxItem_Click(GridVaccinationGiven))" />
                                                                                                    <DxToolbarItem Text="To XLS" Click="(() => GridExtention.ExportXlsItem_Click(GridVaccinationGiven))" />
                                                                                                </Items>
                                                                                            </DxToolbarItem>
                                                                                        </DxToolbar>
                                                                                    </ToolbarTemplate>


                                                                                    <Columns>
                                                                                        <DxGridSelectionColumn Width="15px" />
                                                                                        <DxGridDataColumn FieldName="Product.Name" Caption="Vaccination" />
                                                                                        <DxGridDataColumn FieldName="ReminderDate" Caption="Reminder Date" DisplayFormat="@Helper.DefaultFormatDate" />
                                                                                        <DxGridDataColumn FieldName="Batch" Caption="Lot/Serial Number" />
                                                                                        <DxGridDataColumn FieldName="Dose" Caption="Dose" />
                                                                                        <DxGridDataColumn FieldName="NextDoseDate" Caption="Next Dose Date" DisplayFormat="@Helper.DefaultFormatDate" />
                                                                                        <DxGridDataColumn FieldName="Physician.Name" Caption="Physician" />
                                                                                        <DxGridDataColumn FieldName="Observations" Caption="Observations" />
                                                                                        <DxGridDataColumn FieldName="SalesPerson.Name" Caption="SalesPerson" />
                                                                                        <DxGridDataColumn FieldName="Educator.Name" Caption="Educator" />
                                                                                        <DxGridDataColumn FieldName="StatusName" Caption="Status" />

                                                                                        @if (GeneralConsultanService.Status == EnumStatusGeneralConsultantService.NurseStation || GeneralConsultanService.Status == EnumStatusGeneralConsultantService.Physician)
                                                                                        {
                                                                                            <DxGridDataColumn AllowSort="false" Width="150px" TextAlignment="GridTextAlignment.Center">
                                                                                                <CellDisplayTemplate>
                                                                                                    @{
                                                                                                        var item = context.DataItem as VaccinationPlanDto;
                                                                                                        if (item != null && item.Status == EnumStatusVaccination.InProgress)
                                                                                                        {
                                                                                                            <DxButton RenderStyle="ButtonRenderStyle.Danger"
                                                                                                                      Click="@(()=> OnClickCancelGiveVaccine(item))"
                                                                                                                      CssClass="me-1"
                                                                                                                      Text="Cancel" />
                                                                                                        }
                                                                                                    }
                                                                                                </CellDisplayTemplate>
                                                                                            </DxGridDataColumn>
                                                                                        }
                                                                                    </Columns>

                                                                                    <EditFormTemplate Context="EditFormContextGivens">
                                                                                        @{
                                                                                            if (EditFormContextGivens.DataItem is null)
                                                                                            {
                                                                                                VaccinationGiven = (VaccinationPlanDto)EditFormContextGivens.EditModel;
                                                                                            }
                                                                                            var IsBatch = Products.FirstOrDefault(x => x.Id == VaccinationGiven.ProductId)?.TraceAbility ?? false;
                                                                                        }

                                                                                        <div class="row w-100">
                                                                                            <DxFormLayout CssClass="w-100">
                                                                                                <div class="col-md-4">
                                                                                                    <DxFormLayoutItem CaptionPosition="CaptionPosition.Vertical" CaptionCssClass="required-caption normal-caption" Caption="Vaccination Given" ColSpanMd="12">
                                                                                                        <MyDxComboBox Data="@Products"
                                                                                                                      NullText="Select Vaccination Given"
                                                                                                                      @ref="refVaccinationGivenComboBox"
                                                                                                                      @bind-Value="@VaccinationGiven.ProductId"
                                                                                                                      TextFieldName="Name"
                                                                                                                      ValueFieldName="Id"
                                                                                                                      SelectedItemChanged="@(async (ProductDto freq) => await OnSelectProduct(freq))"
                                                                                                                      TextChanged="((string e) => OnInputVaccinationGivenChanged(e))">
                                                                                                            <Buttons>
                                                                                                                <DxEditorButton Click="OnSearchVaccinationGivenIndexDecrement"
                                                                                                                                IconCssClass="fa-solid fa-caret-left"
                                                                                                                                Tooltip="Previous Index" />
                                                                                                                <DxEditorButton Click="OnSearchVaccinationGiven"
                                                                                                                                IconCssClass="fa-solid fa-magnifying-glass"
                                                                                                                                Tooltip="Search" />
                                                                                                                <DxEditorButton Click="OnSearchVaccinationGivenIndexIncrement"
                                                                                                                                IconCssClass="fa-solid fa-caret-right"
                                                                                                                                Tooltip="Next Index" />
                                                                                                            </Buttons>
                                                                                                            <Columns>
                                                                                                                <DxListEditorColumn FieldName="@nameof(ProductDto.Name)" Caption="Name" />
                                                                                                                <DxListEditorColumn FieldName="@nameof(ProductDto.InternalReference)" Caption="Internal Reference" />
                                                                                                                <DxListEditorColumn FieldName="@nameof(ProductDto.SalesPrice)" Caption="Sales Price" />
                                                                                                                <DxListEditorColumn FieldName="ProductDto.Uom.Name" Caption="UoM" />
                                                                                                            </Columns>
                                                                                                        </MyDxComboBox>
                                                                                                        <ValidationMessage For="@(()=>VaccinationGiven.ProductId)" />
                                                                                                    </DxFormLayoutItem>

                                                                                                    <DxFormLayoutItem Caption="Batch" Enabled="IsBatch" CaptionCssClass="required-caption normal-caption" ColSpanMd="12" CaptionPosition="CaptionPosition.Vertical">
                                                                                                        <MyDxComboBox Data="@Batch"
                                                                                                                      NullText="Select Batch..."
                                                                                                                      SelectedItemChanged="@((string a)=> SelectedBatchGiven(a))"
                                                                                                                      AllowUserInput="true"
                                                                                                                      @bind-Value="@VaccinationGiven.Batch"
                                                                                                                      @bind-Text="@VaccinationGiven.Batch" />
                                                                                                        <ValidationMessage For="@(() => VaccinationGiven.Batch)" />

                                                                                                    </DxFormLayoutItem>

                                                                                                    <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Teoritical Qty" ColSpanMd="12" CaptionPosition="CaptionPosition.Vertical">
                                                                                                        <DxSpinEdit ShowValidationIcon="true"
                                                                                                                    ReadOnly
                                                                                                                    MinValue="0"
                                                                                                                    @bind-Value="@VaccinationGiven.TeoriticalQty"
                                                                                                                    NullText="Teoritical Qty"
                                                                                                                    ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" />
                                                                                                        <ValidationMessage For="@(()=> VaccinationGiven.TeoriticalQty)"   />
                                                                                                    </DxFormLayoutItem>

                                                                                                    <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Quantity" ColSpanMd="12" CaptionPosition="CaptionPosition.Vertical">
                                                                                                        <DxSpinEdit ShowValidationIcon="true"
                                                                                                                    MinValue="0"
                                                                                                                    @bind-Value="@VaccinationGiven.Quantity"
                                                                                                                    NullText="Teoritical Qty"
                                                                                                                    ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" />
                                                                                                        <ValidationMessage For="@(()=> VaccinationGiven.Quantity)"   />
                                                                                                    </DxFormLayoutItem>

                                                                                                </div>
                                                                                                <div class="col-md-4">
                                                                                                    <DxFormLayoutItem CaptionCssClass="required-caption normal-caption" CaptionPosition="CaptionPosition.Vertical" Caption="Sales Person" ColSpanMd="12">
                                                                                                        <MyDxComboBox Data="@SalesPersons"
                                                                                                                      NullText="Select Sales Person"
                                                                                                                      @ref="refSalesPersonComboBox"
                                                                                                                      @bind-Value="@VaccinationGiven.SalesPersonId"
                                                                                                                      TextFieldName="Name"
                                                                                                                      ValueFieldName="Id"
                                                                                                                      TextChanged="((string e) => OnInputSalesPersonChanged(e))">
                                                                                                            <Buttons>
