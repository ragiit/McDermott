@page "/clinic-service/vaccinations"
@page "/clinic-service/vaccinations/{PageMode}"
@page "/clinic-service/vaccinations/{PageMode}/{Id:long}"

@using McDermott.Web.Components.LayoutComponents

<PageTitle>@Helper.APP_NAME - Vaccinations</PageTitle>

@if (IsAccess && !IsLoadingPage)
{
    <div class="wrapper">
        <BaseHeaderPage Title="Vaccinations" OnClickBack="OnCancelBack" ShowBackButton="ShowForm" />
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        @if (!ShowForm)
                        {
                            <div class="card">
                                <DxLoadingPanel @bind-Visible="PanelVisible"
                                                IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                                IsContentBlocked="true"
                                                ApplyBackgroundShading="true"
                                                IndicatorAreaVisible="false"
                                                Text="Fetching Data...">


                                    <MyGrid @ref="Grid"
                                            Data="GeneralConsultanServices.OrderByDescending(x => x.RegistrationDate).ThenByDescending(x => x.IsAlertInformationSpecialCase).ThenByDescending(x => x.ClassType is not null)"
                                            @bind-SelectedDataItems="@SelectedDataItems"
                                            DataItemDeleting="OnDelete"
                                            RowDoubleClick="@(async () => await EditItem_Click())"
                                            FocusedRowChanged="Grid_FocusedRowChanged1"
                                            KeyFieldName="Id">

                                        <ToolbarTemplate>
                                            <MyDxToolbarBase TItem="GeneralConsultanServiceDto"
                                                             Items="@GeneralConsultanServices"
                                                             SelectedDataItems="@SelectedDataItems"
                                                             NewItem_Click="@(() => InitializeNew(false))"
                                                             Grid="Grid"
                                                             EditItem_Click="@(async () => await EditItem_Click(false))"
                                                             DeleteItem_Click="@DeleteItem_Click"
                                                             Refresh_Click="@(async () => await Refresh_Click())"
                                                             EnableDelete="IsDeletedConsultantService || SelectedDataItems.Count > 1"
                                                             IsImport="false" />
                                        </ToolbarTemplate>

                                        <Columns>
                                            <DxGridSelectionColumn Width="15px" />
                                            <DxGridDataColumn MinWidth="200"
                                                              FieldName="RegistrationDate"
                                                              FilterRowOperatorType="GridFilterRowOperatorType.Contains"
                                                              DisplayFormat="ddd, dd MMM yyyy"
                                                              Caption="Registration Date" />
                                            <DxGridDataColumn MinWidth="200" FieldName="StatusName" Caption="Status" />
                                            <DxGridDataColumn MinWidth="200" FieldName="Patient.Name" Caption="Patient" />
                                            <DxGridDataColumn MinWidth="200" FieldName="Pratitioner.Name" Caption="Doctor" />
                                            <DxGridDataColumn MinWidth="200" FieldName="Service.Name" Caption="Service" />
                                            <DxGridDataColumn MinWidth="200" FieldName="Payment" Caption="Payment Method" Visible="false" />
                                            <DxGridDataColumn MinWidth="200" FieldName="AppointmentDate" Caption="Appoiment" />
                                            <DxGridDataColumn MinWidth="200" FieldName="IsAlertInformationSpecialCase" Caption="Special Case">
                                                <CellDisplayTemplate>
                                                    @GetIssuePriorityIconHtml((context.DataItem as GeneralConsultanServiceDto))
                                                </CellDisplayTemplate>
                                            </DxGridDataColumn>
                                        </Columns>
                                        <GroupSummary>
                                            <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="StatusName" />
                                        </GroupSummary>
                                    </MyGrid>
                                </DxLoadingPanel>
                            </div>
                        }
                        else
                        {
                            <div class="row justify-content-end mb-3">
                                <div class="col-auto align-self-end">
                                    <DxTabs>
                                        <DxTab Text="Planned" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Planned)"></DxTab>
                                        <DxTab Text="Confirmed" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Confirmed)"></DxTab>
                                        <DxTab Text="Nurse Station" Enabled="@IsStatus(EnumStatusGeneralConsultantService.NurseStation)"></DxTab>
                                        <DxTab Text="Waiting" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Waiting)"></DxTab>
                                        @if (IsStatus(EnumStatusGeneralConsultantService.ProcedureRoom))
                                        {
                                            <DxTab Text="Procedure Room" Enabled="@IsStatus(EnumStatusGeneralConsultantService.ProcedureRoom)"></DxTab>
                                        }
                                        else
                                        {
                                            <DxTab Text="Physician" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Physician)"></DxTab>
                                        }
                                        <DxTab Text="Finished" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Finished)"></DxTab>
                                        <DxTab Text="Canceled" Enabled="@IsStatus(EnumStatusGeneralConsultantService.Canceled)"></DxTab>
                                    </DxTabs>
                                </div>
                            </div>

                            <DxLoadingPanel @bind-Visible="IsLoading"
                                            IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                            IsContentBlocked="true"
                                            ApplyBackgroundShading="true"
                                            IndicatorAreaVisible="false"
                                            Text="Fetching Data...">

                                <EditForm Model="@GeneralConsultanService" Context="EditFormContext" OnValidSubmit="@HandleValidSubmit"
                                          OnInvalidSubmit="@HandleInvalidSubmit">
                                    <DataAnnotationsValidator />

                                    @if (GeneralConsultanService.Status != EnumStatusGeneralConsultantService.ProcedureRoom && GeneralConsultanService.Status != EnumStatusGeneralConsultantService.Finished && GeneralConsultanService.Status != EnumStatusGeneralConsultantService.Canceled)
                                    {
                                        <div class="card sticky">
                                            <div class="card-body">
                                                <div class=" row w-100">
                                                    <div class="col-auto pe-0 ">
                                                        <DxButton Enabled="!IsLoading"
                                                                  IconCssClass="fa-solid fa-check"
                                                                  Text="@StagingText.GetDisplayName()"
                                                                  Click="OnClickConfirm"
                                                                  Visible="@(!(GeneralConsultanService.Status == EnumStatusGeneralConsultantService.Waiting && Convert.ToBoolean(UserLogin.IsNurse)))"
                                                                  RenderStyle="ButtonRenderStyle.Primary">
                                                        </DxButton>
                                                        <DxButton Visible="@(GeneralConsultanService.Id > 0)"
                                                                  Enabled="!IsLoading"
                                                                  IconCssClass="fa-solid fa-xmark"
                                                                  Text="Cancel"
                                                                  Click="OnCancelStatus"
                                                                  RenderStyle="ButtonRenderStyle.Danger">
                                                        </DxButton>
                                                    </div>

                                                    @if (!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Waiting) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Confirmed) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Finished) && !GeneralConsultanService.StatusName.Equals("Canceled"))
                                                    {
                                                        <div class="col-sm align-self-end">
                                                            <div class="row justify-content-end">
                                                                <div class="col-auto">
                                                                    <DxButton Enabled="!IsLoading" RenderStyle="ButtonRenderStyle.Primary" RenderStyleMode="@ButtonRenderStyleMode.Contained" IconCssClass="fa-solid fa-floppy-disk" Text="Save" SubmitFormOnClick="true"></DxButton>
                                                                    <DxButton RenderStyle="ButtonRenderStyle.Danger" RenderStyleMode="@ButtonRenderStyleMode.Contained" IconCssClass="fa-solid fa-xmark" Text="Discard" Click="OnCancelBack"></DxButton>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <GCGeneralInformationLayoutComponent TGCForm="GeneralConsultanServiceDto"
                                                                         GeneralConsultanService="GeneralConsultanService"
                                                                         CbSelectedItemInsurancePolicyChanged="SelectedItemInsurancePolicyChanged"
                                                                         CbSelectedItemPatientChanged="SelectedItemPatientChanged"
                                                                         CbSelectedItemPaymentChanged="SelectedItemPaymentChanged"
                                                                         CbSelectedItemRegisTypeChanged="SelectedItemRegisTypeChanged"
                                                                         CbSelectedItemServiceChanged="SelectedItemServiceChanged"
                                                                         CbSelectedMaternityStartDateChanged="SelectedMaternityStartDateChanged"
                                                                         ClassTypes="ClassTypes"
                                                                         InsurancePolicies="InsurancePolicies"
                                                                         Patients="Patients"
                                                                         Payments="Payments"
                                                                         Physicions="Physicions"
                                                                         RegisType="RegisType"
                                                                         SelectedInsurancePolicy="SelectedInsurancePolicy"
                                                                         Services="Services" 
                                                                         ReadOnlyService="true"
                                                                         UserForm="UserForm" >
                                    </GCGeneralInformationLayoutComponent>

                                    <div class="w-100">
                                        <div class="card">
                                            <div class="card-header">
                                                <span class="fw-bolder">History</span>
                                            </div>

                                            <div class="card-body">
                                                <div class="w-100">
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <span class="fw-bolder">Allergy Data</span>
                                                        </div>

                                                        <div class="card-body">
                                                            <DxFormLayout CssClass="w-100">
                                                                <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Weather" ColSpanMd="12">
                                                                    <div class="row w-100">
                                                                        <div class="col-md-1">
                                                                            <DxCheckBox ReadOnly="@(!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Planned) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))" @bind-Checked="@GeneralConsultanService.IsWeather" />
                                                                        </div>
                                                                        <div class="col-md-11">
                                                                            @if (PatientAllergy.Weather is not null || GeneralConsultanService.IsWeather)
                                                                            {
                                                                                <DxTagBox Data="@WeatherAllergies"
                                                                                          NullText="Select Allergy..."
                                                                                          ReadOnly="@(!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Planned) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))"
                                                                                          @bind-Values="@SelectedWeatherAllergies"
                                                                                          EditFormat="{1}"
                                                                                          InputId="tbMultiColumn">
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.KdAllergy)"
                                                                                                        Caption="Code"
                                                                                                        Width="100px" />
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.NmAllergy)"
                                                                                                        Caption="Name" />
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.TypeString)"
                                                                                                        Caption="Type" />
                                                                                </DxTagBox>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </DxFormLayoutItem>

                                                                <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Pharmacology" ColSpanMd="12">
                                                                    <div class="row w-100">
                                                                        <div class="col-md-1">
                                                                            <DxCheckBox ReadOnly="@(!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Planned) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))" @bind-Checked="@GeneralConsultanService.IsPharmacology" />
                                                                        </div>
                                                                        <div class="col">
                                                                            @if (PatientAllergy.Farmacology is not null || GeneralConsultanService.IsPharmacology)
                                                                            {
                                                                                <DxTagBox Data="@PharmacologyAllergies"
                                                                                          ReadOnly="@(!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Planned) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))"
                                                                                          NullText="Select Allergy..."
                                                                                          @bind-Values="@SelectedPharmacologyAllergies"
                                                                                          EditFormat="{1}"
                                                                                          InputId="tbMultiColumn">
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.KdAllergy)"
                                                                                                        Caption="Code"
                                                                                                        Width="100px" />
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.NmAllergy)"
                                                                                                        Caption="Name" />
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.TypeString)"
                                                                                                        Caption="Type" />
                                                                                </DxTagBox>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </DxFormLayoutItem>

                                                                <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Food" ColSpanMd="12">
                                                                    <div class="row w-100">
                                                                        <div class="col-md-1">
                                                                            <DxCheckBox ReadOnly="@(!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Planned) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))" @bind-Checked="@GeneralConsultanService.IsFood" />
                                                                        </div>
                                                                        <div class="col-md-11">
                                                                            @if (PatientAllergy.Food is not null || GeneralConsultanService.IsFood)
                                                                            {
                                                                                <DxTagBox Data="@FoodAllergies"
                                                                                          NullText="Select Allergy..."
                                                                                          @bind-Values="@SelectedFoodAllergies"
                                                                                          EditFormat="{1}"
                                                                                          ReadOnly="@(!GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Planned) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) && !GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))"
                                                                                          InputId="tbMultiColumn">
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.KdAllergy)"
                                                                                                        Caption="Code"
                                                                                                        Width="100px" />
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.NmAllergy)"
                                                                                                        Caption="Name" />
                                                                                    <DxListEditorColumn FieldName="@nameof(AllergyDto.TypeString)"
                                                                                                        Caption="Type" />
                                                                                </DxTagBox>
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </DxFormLayoutItem>

                                                            </DxFormLayout>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="w-100 mt-2">
                                                    <div class="row w-100">
                                                        <div class="col-md-6">
                                                            <DxFormLayout CssClass="w-100">
                                                                <DxFormLayoutItem Caption="Family Medical History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                    <Template>
                                                                        <DxGridLayout ColumnSpacing="8px">
                                                                            <Rows>
                                                                                <DxGridLayoutRow />
                                                                            </Rows>
                                                                            <Columns>
                                                                                <DxGridLayoutColumn />
                                                                                <DxGridLayoutColumn />
                                                                            </Columns>
                                                                            <Items>
                                                                                <DxGridLayoutItem Row="0" Column="0" CssClass="normal-caption" ColumnSpan="1">
                                                                                    <Template>
                                                                                        <MyDxComboBox Data="@YesNoOptions"
                                                                                                      NullText="Yes/No"
                                                                                                      @bind-Value="@UserForm.IsFamilyMedicalHistory">
                                                                                        </MyDxComboBox>
                                                                                    </Template>
                                                                                </DxGridLayoutItem>
                                                                                <DxGridLayoutItem Row="0" Visible="@(UserForm.IsFamilyMedicalHistory == "Yes")" Column="1" CssClass=" normal-caption " ColumnSpan="12">
                                                                                    <Template>
                                                                                        <MyDxComboBox Data="@RiwayatPenyakitKeluarga"
                                                                                                      NullText="Select Family Medical History..."
                                                                                                      @bind-Value="@UserForm.FamilyMedicalHistory">
                                                                                        </MyDxComboBox>
                                                                                    </Template>
                                                                                </DxGridLayoutItem>
                                                                            </Items>
                                                                        </DxGridLayout>
                                                                    </Template>
                                                                </DxFormLayoutItem>

                                                                <DxFormLayoutItem Caption=" " Visible="@(UserForm.FamilyMedicalHistory is not null && UserForm.FamilyMedicalHistory.Equals("Other"))" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                    <MyTextBox @bind-Text="@UserForm.FamilyMedicalHistoryOther"
                                                                               NullText="Family MedicalHistory Other" />
                                                                </DxFormLayoutItem>


                                                                <DxFormLayoutItem Caption="Medication History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                    <Template>
                                                                        <DxGridLayout ColumnSpacing="8px">
                                                                            <Rows>
                                                                                <DxGridLayoutRow />
                                                                            </Rows>
                                                                            <Columns>
                                                                                <DxGridLayoutColumn />
                                                                                <DxGridLayoutColumn />
                                                                            </Columns>
                                                                            <Items>
                                                                                <DxGridLayoutItem Row="0" Column="0" CssClass="normal-caption" ColumnSpan="1">
                                                                                    <Template>
                                                                                        <MyDxComboBox Data="@YesNoOptions"
                                                                                                      NullText="Yes/No"
                                                                                                      @bind-Value="@UserForm.IsMedicationHistory">
                                                                                        </MyDxComboBox>
                                                                                    </Template>
                                                                                </DxGridLayoutItem>
                                                                                <DxGridLayoutItem Visible="@(UserForm.IsMedicationHistory == "Yes")" Row="0" Column="1" CssClass=" normal-caption " ColumnSpan="12">
                                                                                    <Template>
                                                                                        <MyTextBox @bind-Text="@UserForm.MedicationHistory"
                                                                                                   NullText="Medication History" />
                                                                                    </Template>
                                                                                </DxGridLayoutItem>
                                                                            </Items>
                                                                        </DxGridLayout>
                                                                    </Template>
                                                                </DxFormLayoutItem>

                                                                <DxFormLayoutItem Caption="Past Medical History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                                    <MyTextBox @bind-Text="@UserForm.PastMedicalHistory"
                                                                               NullText="Past Medical History" />
                                                                </DxFormLayoutItem> 
                                                            </DxFormLayout>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    @if (IsStatus(EnumStatusGeneralConsultantService.NurseStation) || IsStatus(EnumStatusGeneralConsultantService.Waiting) || IsStatus(EnumStatusGeneralConsultantService.Physician) || IsStatus(EnumStatusGeneralConsultantService.Finished) || IsStatus(EnumStatusGeneralConsultantService.Canceled))
                                    {
                                        <div class="w-100">
                                            <div class="card">
                                                <div class="card-body">
                                                    <DxTabs>
                                                        <DxTabPage CssClass="w-100" Text="Clinical Assesment">
                                                            <GCClinicalAssesmentLayoutPage Awareness="Awareness"
                                                                                           ClinicVisitTypes="ClinicVisitTypes"
                                                                                           GeneralConsultanService="GeneralConsultanService"
                                                                                           InformationFrom="InformationFrom"
                                                                                           TGCForm="GeneralConsultanServiceDto" />
                                                        </DxTabPage>

                                                        <DxTabPage CssClass="w-100" Text="CPPT">

                                                            @if (GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) || GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))
                                                            {

                                                                <div class="w-100 mt-2">
                                                                    <div class="card">
                                                                        <div class="card-header">
                                                                            <span class="fw-bolder">Input CPPT</span>
                                                                        </div>

                                                                        <div class="card-body">
                                                                            <div class="row w-100">
                                                                                <div class="col-md-12">
                                                                                    <DxFormLayout CssClass="w-100">
                                                                                        <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="User" ColSpanMd="12">
                                                                                            <label>@UserLogin.Name</label>
                                                                                        </DxFormLayoutItem>

                                                                                        <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Subjective" ColSpanMd="12">
                                                                                            <DxTextBox @bind-Text="@FormInputCPPTGeneralConsultan.Subjective" NullText="Subjective" />
                                                                                        </DxFormLayoutItem>

                                                                                        <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Objective" ColSpanMd="12">
                                                                                            <DxMaskedInput @bind-Value="@FormInputCPPTGeneralConsultan.Objective"
                                                                                                           NullText="Objective">
                                                                                                <Buttons>
                                                                                                    <DxEditorButton CssClass="text-bold btn-primary" Text="Get Objectives" Click="OnClickGetObjectives" />
                                                                                                </Buttons>
                                                                                            </DxMaskedInput>
                                                                                        </DxFormLayoutItem>

                                                                                        @if (IsStatus(EnumStatusGeneralConsultantService.Physician))
                                                                                        {
                                                                                            <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Diagnosis" ColSpanMd="12">
                                                                                                <MyDxComboBox Data="@Diagnoses"
                                                                                                              @bind-Value="@SelectedDiagnosis"
                                                                                                              NullText="Select Diagnosis..."
                                                                                                              EditFormat="{0} - {1}">
                                                                                                    <Columns>
                                                                                                        <DxListEditorColumn FieldName="@nameof(DiagnosisDto.Code)"
                                                                                                                            Caption="Code" />

                                                                                                        <DxListEditorColumn FieldName="@nameof(DiagnosisDto.Name)"
                                                                                                                            Caption="Name" />
                                                                                                    </Columns>
                                                                                                </MyDxComboBox>
                                                                                            </DxFormLayoutItem>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Diagnosis" ColSpanMd="12">
                                                                                                <MyDxComboBox Data="@NursingDiagnoses"
                                                                                                              @bind-Value="@SelectedNursingDiagnosis"
                                                                                                              NullText="Select Diagnosis..."
                                                                                                              EditFormat="{0} - {1}">
                                                                                                    <Columns>
                                                                                                        <DxListEditorColumn FieldName="@nameof(NursingDiagnosesDto.Code)"
                                                                                                                            Caption="Code" />

                                                                                                        <DxListEditorColumn FieldName="@nameof(NursingDiagnosesDto.Problem)"
                                                                                                                            Caption="Problem" />
                                                                                                    </Columns>
                                                                                                </MyDxComboBox>
                                                                                            </DxFormLayoutItem>
                                                                                        }

                                                                                        <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Planning" ColSpanMd="12">
                                                                                            <DxTextBox @bind-Text="@FormInputCPPTGeneralConsultan.Plan" NullText="Planning" />
                                                                                        </DxFormLayoutItem>


                                                                                    </DxFormLayout>
                                                                                </div>

                                                                                <div class="col-md-12">
                                                                                    <div class="ml-2 mt-1 mb-2 mr-3">
                                                                                        <div class="row justify-content-end">
                                                                                            <div class="col-auto align-self-end">
                                                                                                <DxButton Text="Add CPPT"
                                                                                                          Click="OnClickConfirmCPPT"
                                                                                                          RenderStyle="ButtonRenderStyle.Primary"
                                                                                                          IconCssClass="fa-solid fa-floppy-disk"
                                                                                                          CssClass="w-20 ml" />
                                                                                                <DxButton Text="Clear"
                                                                                                          RenderStyle="ButtonRenderStyle.Danger"
                                                                                                          Click="OnClickClearCPPT"
                                                                                                          IconCssClass="fa-solid fa-xmark"
                                                                                                          CssClass="w-20 ml" />
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <hr />
                                                            }

                                                            <div class="w-100 mt-2">
                                                                <div class="card w-100">
                                                                    <div class="card-header">
                                                                        <span class="fw-bolder">CPPT</span>
                                                                    </div>

                                                                    <div class="row w-100">
                                                                        <div class="col-md-12 w-100">
                                                                            <DxFormLayout CssClass="w-100">
                                                                                <DxLoadingPanel @bind-Visible="PanelVisible"
                                                                                                IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                                                                                IsContentBlocked="true"
                                                                                                ApplyBackgroundShading="true"
                                                                                                IndicatorAreaVisible="false"
                                                                                                Text="Fetching Data...">
                                                                                    <MyGrid @ref="GridCppt"
                                                                                            Data="GeneralConsultanCPPTs"
                                                                                            @bind-SelectedDataItems="@SelectedDataItemsCPPT"
                                                                                            EditModelSaving="OnClickConfirmCPPT"
                                                                                            DataItemDeleting="OnDeleteTabCPPTConfirm"
                                                                                            FocusedRowChanged="GridTabCPPT_FocusedRowChanged">
                                                                                        <Columns>
                                                                                            <DxGridDataColumn FieldName="Title" />
                                                                                            <DxGridDataColumn FieldName="Body" />
                                                                                            @if (GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) || GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))
                                                                                            {
                                                                                                <DxGridCommandColumn NewButtonVisible="false" EditButtonVisible="false" Width="160px" />
                                                                                            }
                                                                                        </Columns>
                                                                                    </MyGrid>
                                                                                </DxLoadingPanel>
                                                                            </DxFormLayout>
                                                                        </div>

                                                                        @if (GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.NurseStation) || GeneralConsultanService.Status.Equals(EnumStatusGeneralConsultantService.Physician))
                                                                        {
                                                                            <div class="col-md-12 w-100">
                                                                                <div class="ml-2 mt-1 mb-2">
                                                                                    <div class="row justify-content-end">
                                                                                        <div class="col-auto align-self-end">
                                                                                            <DxButton Text="Save CPPT"
                                                                                                      Click="OnClickSaveCPPT"
                                                                                                      RenderStyle="ButtonRenderStyle.Primary"
                                                                                                      IconCssClass="fa-solid fa-floppy-disk"
                                                                                                      CssClass="w-20 ml" />
                                                                                            <DxButton Text="Clear All"
                                                                                                      RenderStyle="ButtonRenderStyle.Danger"
                                                                                                      Click="OnClickClearAllCPPT"
                                                                                                      IconCssClass="fa-solid fa-xmark"
                                                                                                      CssClass="w-20 ml" />
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </DxTabPage>
                                                    </DxTabs>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </EditForm>

