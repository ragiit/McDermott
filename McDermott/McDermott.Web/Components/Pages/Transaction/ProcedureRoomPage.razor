                                                    <Items>
                                                        <DxFormLayoutItem CaptionCssClass="required-caption normal-caption" Caption="Practitioner" ColSpanMd="12">
                                                            <DxComboBox ShowValidationIcon="true" Data="@Doctors"
                                                                        NullText="Select Practitioner..."
