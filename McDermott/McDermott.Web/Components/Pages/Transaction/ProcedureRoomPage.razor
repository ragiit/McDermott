                                                                        @bind-Value="@GeneralConsultanMedicalSupport.PractitionerLabEximinationId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                            <ValidationMessage For="@(() => GeneralConsultanMedicalSupport.PractitionerLabEximinationId)" />
                                                        </DxFormLayoutItem>

