                                                    </DxFormLayoutItem>
                                                    <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Medical Record" ColSpanMd="12">
                                                        <p>@GeneralConsultanService?.Patient?.NoRm</p>
                                                    </DxFormLayoutItem>
                                                </Items>
                                            </DxFormLayoutGroup>
                                        </DxFormLayout>

