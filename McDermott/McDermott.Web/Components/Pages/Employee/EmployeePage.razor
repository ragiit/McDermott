@page "/employee/employees"
@inject IHttpContextAccessor _httpContextAccessor

<PageTitle>McDermott - Master Data Employee</PageTitle>

@if (IsAccess)
{
    <div class="wrapper">

        <McDermott.Web.Components.Layout.BaseContentHeaderLayout Title="Employees" />

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            @if (!ShowForm)
                            {
                                <div class="card-body">
                                    <DxLoadingPanel @bind-Visible="PanelVisible"
                                                    IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                                    IsContentBlocked="true"
                                                    ApplyBackgroundShading="true"
                                                    IndicatorAreaVisible="false"
                                                    Text="Fetching Data...">
                                        <DxGrid @ref="Grid" PagerNavigationMode="PagerNavigationMode.InputBox"
                                                Data="Users"
                                                PageSize="10"
                                                @bind-SelectedDataItems="@SelectedDataItems"
                                                AllowSelectRowByClick="true"
                                                FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
                                                KeyFieldName="Id"
                                                CustomizeDataRowEditor="Grid_CustomizeDataRowEditor"
                                                DataItemDeleting="OnDelete"
                                                FocusedRowEnabled="true"
                                                PopupEditFormCssClass="pw-800"
                                                PagerPosition="GridPagerPosition.Bottom"
                                                PageSizeSelectorVisible="true"
                                                PageSizeSelectorItems="@(new int[] { 10, 20, 50, 100 })"
                                                RowDoubleClick="OnRowDoubleClick"
                                                PageSizeSelectorAllRowsItemVisible="true"
                                                PagerSwitchToInputBoxButtonCount="10"
                                                PagerVisibleNumericButtonCount="10"
                                                FocusedRowChanged="Grid_FocusedRowChanged"
                                                ShowGroupPanel="true"
                                                AutoExpandAllGroupRows="true"
                                                ShowFilterRow="true"
                                                ShowSearchBox="true"
                                                SelectAllCheckboxMode="GridSelectAllCheckboxMode.Mixed"
                                                KeyboardNavigationEnabled="true">
                                            <ToolbarTemplate>
                                                <DxToolbar ItemRenderStyleMode="ToolbarRenderStyleMode.Contained">
                                                    <DxToolbarItem Visible="@UserAccessCRUID.Create" Text="New" Click="NewItem_Click" IconCssClass="fa-solid fa-plus" />
                                                    <DxToolbarItem Visible="@UserAccessCRUID.Update" Text="Edit" Click="EditItem_Click" IconCssClass="fa-solid fa-pen-to-square" Enabled="SelectedDataItems.Count > 0 && Users.Count > 0" />
                                                    <DxToolbarItem Visible="@UserAccessCRUID.Delete" Text="Delete" Click="DeleteItem_Click" IconCssClass="fa-solid fa-trash" Enabled="SelectedDataItems.Count > 0 && Users.Count > 0 && !IsDeleted" />
                                                    <DxToolbarItem BeginGroup="true" Text="Refresh" Click="Refresh_Click" IconCssClass="fa-solid fa-arrows-rotate" />
                                                    <DxToolbarItem Text="Column Chooser" Click="ColumnChooserButton_Click" BeginGroup="true" IconCssClass="fa-solid fa-table-columns" />
                                                    <DxToolbarItem Text="Export" BeginGroup="true" IconCssClass="fa-solid fa-file-export">
                                                        <Items>
                                                            <DxToolbarItem Text="To CSV" Click="ExportCsvItem_Click" />
                                                            <DxToolbarItem Text="To XLSX" Click="ExportXlsxItem_Click" />
                                                            <DxToolbarItem Text="To XLS" Click="ExportXlsItem_Click" />
                                                        </Items>
                                                    </DxToolbarItem>
                                                    @* <DxToolbarItem Visible="false" Text="Import" id="upload" IconCssClass="fa-solid fa-file-import" /> *@
                                                </DxToolbar>
                                            </ToolbarTemplate>
                                            <Columns>
                                                <DxGridSelectionColumn Width="15px" />
                                                <DxGridDataColumn FieldName="NIP" SortIndex="0" />
                                                <DxGridDataColumn FieldName="Name" />
                                                <DxGridDataColumn FieldName="Email" />
                                                <DxGridDataColumn FieldName="JobPosition.Name" Caption="Job Position" />
                                                <DxGridDataColumn FieldName="Department.Name" Caption="Department" />
                                            </Columns>
                                        </DxGrid>
                                    </DxLoadingPanel>
                                </div>
                            }
                            else
                            {
                                <EditForm Model="@UserForm" Context="EditFormContext" OnValidSubmit="@HandleValidSubmit"
                                          OnInvalidSubmit="@HandleInvalidSubmit">
                                    <DataAnnotationsValidator />
                                    <DxFormLayout CssClass="mt">
                                        <DxFormLayoutGroup Caption="General Information" ColSpanMd="12">
                                            <DxFormLayoutItem CaptionCssClass="caption normal-caption" Caption="Name">
                                                <DxTextBox @bind-Text="@UserForm.Name" ShowValidationIcon="true" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Name" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="caption normal-caption"Caption="Email">
                                                <DxTextBox @bind-Text="@UserForm.Email" ShowValidationIcon="true" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Email" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Mobile Phone">
                                                <DxMaskedInput @bind-Value="@UserForm.MobilePhone"
                                                               ShowValidationIcon="true"
                                                               ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                               NullText="Mobile Phone">
                                                    <DxTextMaskProperties Placeholder="Placeholder" />
                                                </DxMaskedInput>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Phone">
                                                <DxMaskedInput @bind-Value="@UserForm.HomePhoneNumber"
                                                               ShowValidationIcon="true"
                                                               ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                               NullText="Home Mobile Phone">
                                                    <DxTextMaskProperties Placeholder="Placeholder" />
                                                </DxMaskedInput>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="caption normal-caption"Caption="Religion">
                                                <DxComboBox Data="@Religions" NullText="Religion" @bind-Value="@UserForm.ReligionId" TextFieldName="Name" ValueFieldName="Id" />
                                            </DxFormLayoutItem> 
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption"Caption="NPWP">
                                                <DxTextBox @bind-Text="@UserForm.Npwp" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="NPWP" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem  CaptionCssClass="caption normal-caption"Caption="Identity Number">
                                                <DxMaskedInput @bind-Value="@UserForm.NoId"
                                                               ShowValidationIcon="true"
                                                               ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                               NullText="Identity Number">
                                                    <DxTextMaskProperties Placeholder="Placeholder" />
                                                </DxMaskedInput>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="caption normal-caption" Caption="Identity Type">
                                                <DxComboBox Data="@IdentityTypes" @bind-Value="@UserForm.TypeId"></DxComboBox>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Expired Identity" Visible="@(@UserForm.TypeId == null ? false : @UserForm.TypeId.Contains("VISA"))">
                                                <DxDateEdit @bind-Date="@UserForm.ExpiredId" Mask="@DateTimeMask.ShortDate" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Emergency Name">
                                                <DxTextBox @bind-Text="@UserForm.EmergencyName" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Emergency Name" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption"Caption="Emergency Relation">
                                                <DxTextBox @bind-Text="@UserForm.EmergencyRelation" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Emergency Relation" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Emergency Email">
                                                <DxTextBox @bind-Text="@UserForm.EmergencyEmail" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Emergency Email" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Date of Birth">
                                                <DxDateEdit @bind-Date="@UserForm.DateOfBirth" NullText="Date of Birth" Mask="@DateTimeMask.ShortDate" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Emergency Phone">
                                                <DxMaskedInput @bind-Value="@UserForm.EmergencyPhone"
                                                               NullText="Emergency Phone"
                                                               ShowValidationIcon="true"
                                                               ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto">
                                                    <DxTextMaskProperties Placeholder="Placeholder" />
                                                </DxMaskedInput>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Gender">
                                                <DxComboBox Data="@Genders" NullText="Gender" @bind-Value="@UserForm.GenderId" TextFieldName="Name" ValueFieldName="Id" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Martial Status">
                                                <DxComboBox Data="@MartialStatuss" NullText="Select Martial Status..." @bind-Value="@UserForm.MartialStatus"></DxComboBox>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="KTP Address" ColSpanMd="12">
                                                <Template>
                                                    <DxGridLayout>
                                                        <Rows>
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                        </Rows>
                                                        <Columns>
                                                            <DxGridLayoutColumn />
                                                            <DxGridLayoutColumn />
                                                        </Columns>
                                                        <Items>
                                                            <DxGridLayoutItem Row="0" Column="0" ColumnSpan="12">
                                                                <Template>
                                                                    <DxTextBox @bind-Text="@UserForm.IdCardAddress1" NullText="Street 1..." />
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="1" Column="0" ColumnSpan="12">
                                                                <Template>
                                                                    <DxTextBox @bind-Text="@UserForm.IdCardAddress2" CssClass="mt" NullText="Street 2..." />
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="2" Column="0" ColumnSpan="12" CssClass="mt">
                                                                <Template>
                                                                    <DxTextBox @bind-Text="@UserForm.IdCardRtRw" NullText="RT/RW..." />
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="3" Column="0" CssClass="mt">
                                                                <Template>
                                                                    <DxComboBox Data="@Provinces"
                                                                                NullText="Select Province..."
                                                                                @bind-Value="@UserForm.IdCardProvinceId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="3" Column="1" CssClass="mt ml">
                                                                <Template>
                                                                    <DxComboBox Data="@Cities.Where(x => x.ProvinceId == UserForm.IdCardProvinceId)"
                                                                                NullText="Select City..."
                                                                                @bind-Value="@UserForm.IdCardCityId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="4" Column="0" CssClass="mt">
                                                                <Template>
                                                                    <DxComboBox Data="@Districts.Where(x => x.CityId == UserForm.IdCardCityId && x.ProvinceId == UserForm.IdCardProvinceId)"
                                                                                NullText="Select District..."
                                                                                @bind-Value="@UserForm.IdCardDistrictId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="4" Column="1" CssClass="mt ml">
                                                                <Template>
                                                                    <DxComboBox Data="@Villages.Where(x => x.CityId == UserForm.IdCardCityId && x.ProvinceId == UserForm.IdCardProvinceId && x.DistrictId == UserForm.IdCardDistrictId)"
                                                                                NullText="Select Village..."
                                                                                @bind-Value="@UserForm.IdCardVillageId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="5" Column="0" ColumnSpan="12" CssClass="mt">
                                                                <Template>
                                                                    <DxComboBox Data="@Countries.Where(x => UserForm.IdCardProvinceId == null || x.Id == Provinces.FirstOrDefault(z => z.Id == UserForm.IdCardProvinceId)?.CountryId)"
                                                                                NullText="Select Country..."
                                                                                @bind-Value="@UserForm.IdCardCountryId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                        </Items>
                                                    </DxGridLayout>
                                                </Template>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Domicile Address" ColSpanMd="12">
                                                <Template>
                                                    <DxGridLayout>
                                                        <Rows>
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                            <DxGridLayoutRow />
                                                        </Rows>
                                                        <Columns>
                                                            <DxGridLayoutColumn />
                                                            <DxGridLayoutColumn />
                                                        </Columns>
                                                        <Items>
                                                            <DxGridLayoutItem Row="0" Column="0" ColumnSpan="12">
                                                                <Template>
                                                                    <DxTextBox @bind-Text="@UserForm.DomicileAddress1" NullText="Street 1..." />
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="1" Column="0" ColumnSpan="12">
                                                                <Template>
                                                                    <DxTextBox @bind-Text="@UserForm.DomicileAddress2" CssClass="mt" NullText="Street 2..." />
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="2" Column="0" ColumnSpan="12" CssClass="mt">
                                                                <Template>
                                                                    <DxTextBox @bind-Text="@UserForm.DomicileRtRw" NullText="RT/RW..." />
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="3" Column="0" CssClass="mt">
                                                                <Template>
                                                                    <DxComboBox Data="@Provinces"
                                                                                NullText="Select Province..."
                                                                                @bind-Value="@UserForm.DomicileProvinceId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="3" Column="1" CssClass="mt ml">
                                                                <Template>
                                                                    <DxComboBox Data="@Cities.Where(x => x.ProvinceId == UserForm.DomicileProvinceId.GetValueOrDefault())"
                                                                                NullText="Select City..."
                                                                                @bind-Value="@UserForm.DomicileCityId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="4" Column="0" CssClass="mt">
                                                                <Template>
                                                                    <DxComboBox Data="@Districts.Where(x => x.CityId == UserForm.DomicileCityId && x.ProvinceId == UserForm.DomicileProvinceId)"
                                                                                NullText="Select District..."
                                                                                @bind-Value="@UserForm.DomicileDistrictId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="4" Column="1" CssClass="mt ml">
                                                                <Template>
                                                                    <DxComboBox Data="@Villages.Where(x => x.CityId == UserForm.DomicileCityId && x.ProvinceId == UserForm.DomicileProvinceId && x.DistrictId == UserForm.DomicileDistrictId)"
                                                                                NullText="Select Village..."
                                                                                @bind-Value="@UserForm.DomicileVillageId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                            <DxGridLayoutItem Row="5" Column="0" ColumnSpan="12" CssClass="mt">
                                                                <Template>
                                                                    <DxComboBox Data="@Countries.Where(x => UserForm.DomicileProvinceId == null || x.Id == Provinces.FirstOrDefault(z => z.Id == UserForm.DomicileProvinceId)?.CountryId)"
                                                                                NullText="Select Country..."
                                                                                @bind-Value="@UserForm.DomicileCountryId"
                                                                                TextFieldName="Name"
                                                                                ValueFieldName="Id">
                                                                    </DxComboBox>
                                                                </Template>
                                                            </DxGridLayoutItem>
                                                        </Items>
                                                    </DxGridLayout>
                                                </Template>
                                            </DxFormLayoutItem>
                                        </DxFormLayoutGroup>

                                        <DxFormLayoutGroup Caption="Employee" ColSpanMd="12">
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Job Position">
                                                <DxComboBox Data="@JobPositions"
                                                            NullText="Select Job Position..."
                                                            @bind-Value="@UserForm.JobPositionId"
                                                            TextFieldName="Name"
                                                            ValueFieldName="Id">
                                                </DxComboBox>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="BPJS TK Number">
                                                <DxMaskedInput @bind-Value="@UserForm.NoBpjsTk"
                                                               NullText="BPJS TK Number"
                                                               ShowValidationIcon="true"
                                                               ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto">
                                                    <DxTextMaskProperties Placeholder="Placeholder" />
                                                </DxMaskedInput>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Department">
                                                <DxComboBox Data="@Departments"
                                                            NullText="Select Department..."
                                                            @bind-Value="@UserForm.DepartmentId"
                                                            TextFieldName="Name"
                                                            ValueFieldName="Id">
                                                </DxComboBox>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Join Date">
                                                <DxDateEdit @bind-Date="@UserForm.JoinDate" Mask="@DateTimeMask.ShortDate" NullText="Join Date" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="BPJS KS Number">
                                                <DxMaskedInput @bind-Value="@UserForm.NoBpjsKs"
                                                               NullText="BPJS KS Number"
                                                               ShowValidationIcon="true"
                                                               ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto">
                                                    <DxTextMaskProperties Placeholder="Placeholder" />
                                                </DxMaskedInput>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="NIP Number">
                                                <DxMaskedInput @bind-Value="@UserForm.NIP"
                                                               NullText="NIP"
                                                               ShowValidationIcon="true"
                                                               ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto">
                                                    <DxTextMaskProperties Placeholder="Placeholder" />
                                                </DxMaskedInput>
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Legacy Number">
                                                <DxTextBox @bind-Text="@UserForm.Legacy" ShowValidationIcon="true" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Legacy" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Oracle Number">
                                                <DxTextBox @bind-Text="@UserForm.Oracle" ShowValidationIcon="true" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Oracle" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="SAP Number">
                                                <DxTextBox @bind-Text="@UserForm.SAP" ShowValidationIcon="true" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="SAP" />
                                            </DxFormLayoutItem>
                                            <DxFormLayoutItem CaptionCssClass="-caption normal-caption" Caption="Employee Type">
                                                <DxComboBox Data="@EmployeeTypes" @bind-Value="@UserForm.EmployeeType" NullText="Select Employee Type..." />
                                            </DxFormLayoutItem>
                                        </DxFormLayoutGroup>
                                    </DxFormLayout>
                                    <div class="ml-2 mt-1 mb-2 mr-3">
                                        <div class="row justify-content-end">
                                            <div class="col-auto align-self-end">
                                                <DxButton RenderStyleMode="@ButtonRenderStyleMode.Outline"
                                                          Text="Save"
                                                          RenderStyle="ButtonRenderStyle.Info"
                                                          SubmitFormOnClick="true"
                                                          IconCssClass="fa-solid fa-floppy-disk"
                                                          CssClass="w-20 ml" />
                                                <DxButton RenderStyleMode="@ButtonRenderStyleMode.Outline"
                                                          Text="Cancel"
                                                          RenderStyle="ButtonRenderStyle.Danger"
                                                          Click="OnCancel"
                                                          IconCssClass="fa-solid fa-xmark"
                                                          CssClass="w-20 ml" />
                                            </div>
                                        </div>
                                    </div>
                                </EditForm>
                                <div class="mt-2"></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}