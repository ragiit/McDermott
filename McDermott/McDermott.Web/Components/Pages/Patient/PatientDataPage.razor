                                                            <DxListEditorColumn FieldName="@nameof(AllergyDto.KdAllergy)"
                                                                                Caption="Code"
                                                                                Width="100px" />
                                                            <DxListEditorColumn FieldName="@nameof(AllergyDto.NmAllergy)"
                                                                                Caption="Name" />
                                                            <DxListEditorColumn FieldName="@nameof(AllergyDto.TypeString)"
                                                                                Caption="Type" />
                                                        </DxTagBox>
                                                    </DxFormLayoutItem>

                                                    <DxFormLayoutItem Caption="Family Medical History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                        <Template>
                                                            <DxGridLayout ColumnSpacing="8px">
                                                                <Rows>
                                                                    <DxGridLayoutRow />
                                                                </Rows>
                                                                <Columns>
                                                                    <DxGridLayoutColumn />
                                                                    <DxGridLayoutColumn />
                                                                </Columns>
                                                                <Items>
                                                                    <DxGridLayoutItem Row="0" Column="0" CssClass="normal-caption" ColumnSpan="1">
                                                                        <Template>
                                                                            <MyDxComboBox Data="@YesNoOptions"
                                                                                          NullText="Yes/No"
                                                                                          @bind-Value="@UserForm.IsFamilyMedicalHistory">
                                                                            </MyDxComboBox>
                                                                        </Template>
                                                                    </DxGridLayoutItem>
                                                                    <DxGridLayoutItem Row="0" Visible="@(UserForm.IsFamilyMedicalHistory == "Yes")" Column="1" CssClass=" normal-caption " ColumnSpan="12">
                                                                        <Template>
                                                                            <MyDxComboBox Data="@RiwayatPenyakitKeluarga"
                                                                                          NullText="Select Family Medical History..."
                                                                                          @bind-Value="@UserForm.FamilyMedicalHistory">
                                                                            </MyDxComboBox>
                                                                        </Template>
                                                                    </DxGridLayoutItem>
                                                                </Items>
                                                            </DxGridLayout>
                                                        </Template>
                                                    </DxFormLayoutItem>

                                                    <DxFormLayoutItem Caption=" " Visible="@(UserForm.FamilyMedicalHistory is not null && UserForm.FamilyMedicalHistory.Equals("Other"))" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                        <MyTextBox @bind-Text="@UserForm.FamilyMedicalHistoryOther"
                                                                   NullText="Family MedicalHistory Other" />
                                                    </DxFormLayoutItem>


                                                    <DxFormLayoutItem Caption="Medication History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                        <Template>
                                                            <DxGridLayout ColumnSpacing="8px">
                                                                <Rows>
                                                                    <DxGridLayoutRow />
                                                                </Rows>
                                                                <Columns>
                                                                    <DxGridLayoutColumn />
                                                                    <DxGridLayoutColumn />
                                                                </Columns>
                                                                <Items>
                                                                    <DxGridLayoutItem Row="0" Column="0" CssClass="normal-caption" ColumnSpan="1">
                                                                        <Template>
                                                                            <MyDxComboBox Data="@YesNoOptions"
                                                                                          NullText="Yes/No"
                                                                                          @bind-Value="@UserForm.IsMedicationHistory">
                                                                            </MyDxComboBox>
                                                                        </Template>
                                                                    </DxGridLayoutItem>
                                                                    <DxGridLayoutItem Visible="@(UserForm.IsMedicationHistory == "Yes")" Row="0" Column="1" CssClass=" normal-caption " ColumnSpan="12">
                                                                        <Template>
                                                                            <MyTextBox @bind-Text="@UserForm.MedicationHistory"
                                                                                       NullText="Medication History" />
                                                                        </Template>
                                                                    </DxGridLayoutItem>
                                                                </Items>
                                                            </DxGridLayout>
                                                        </Template>
                                                    </DxFormLayoutItem>

                                                    <DxFormLayoutItem Caption="Past Medical History" CaptionCssClass="normal-caption" ColSpanMd="12">
                                                        <MyTextBox @bind-Text="@UserForm.PastMedicalHistory"
                                                                   NullText="Past Medical History" />
                                                    </DxFormLayoutItem>
                                                </Items>
                                            </DxFormLayoutGroup>

                                            <DxFormLayoutGroup Caption="Family Relation" ColSpanMd="12" ExpandButtonDisplayMode="GroupExpandButtonDisplayMode.Start" AnimationType="LayoutAnimationType.Slide">
                                                <Items>
                                                    <DxLoadingPanel @bind-Visible="PanelVisible"
                                                                    IndicatorAnimationType="WaitIndicatorAnimationType.Pulse"
                                                                    IsContentBlocked="true"
                                                                    ApplyBackgroundShading="true"
                                                                    IndicatorAreaVisible="false"
                                                                    Text="Fetching Data...">

                                                        <DxGrid @ref="GridFamilyRelation" PagerNavigationMode="PagerNavigationMode.InputBox"
                                                                Data="PatientFamilyRelations"
                                                                PageSize="10"
                                                                @bind-SelectedDataItems="@SelectedDataFamilyRelationItems"
                                                                FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
                                                                KeyFieldName="Id"
                                                                CustomizeDataRowEditor="Grid_CustomizeDataRowEditor"
                                                                EditModelSaving="OnSaveFamilyMember"
                                                                DataItemDeleting="OnDeleteFamilyRelation"
                                                                EditMode="GridEditMode.PopupEditForm"
                                                                PopupEditFormCssClass="pw-800"
                                                                PagerPosition="GridPagerPosition.Bottom"
                                                                PageSizeSelectorVisible="true"
                                                                PageSizeSelectorItems="@(new int[] { 10, 20, 50, 100 })"
                                                                PageSizeSelectorAllRowsItemVisible="true"
                                                                PagerSwitchToInputBoxButtonCount="10"
                                                                AllowSelectRowByClick="true"
                                                                FocusedRowEnabled="true"
                                                                PagerVisibleNumericButtonCount="10"
                                                                FocusedRowChanged="GridFamilyMember_FocusedRowChanged"
                                                                ShowGroupPanel="true"
                                                                AutoExpandAllGroupRows="true"
                                                                ShowFilterRow="true"
                                                                ShowSearchBox="true"
                                                                SelectAllCheckboxMode="GridSelectAllCheckboxMode.Mixed"
                                                                KeyboardNavigationEnabled="true">
                                                            <ToolbarTemplate>
                                                                <DxToolbar ItemRenderStyleMode="ToolbarRenderStyleMode.Contained">
                                                                    <DxToolbarItem Text="New" Click="NewFamilyRelationItem_Click" IconCssClass="fa-solid fa-plus" />
                                                                    <DxToolbarItem Text="Edit" Click="EditFamilyRelationItem_Click" IconCssClass="fa-solid fa-pen-to-square" Enabled="SelectedDataFamilyRelationItems.Count > 0 && PatientFamilyRelations.Count > 0" />
                                                                    <DxToolbarItem Text="Delete" Click="DeleteFamilyRelationItem_Click" IconCssClass="fa-solid fa-trash" Enabled="SelectedDataFamilyRelationItems.Count > 0 && PatientFamilyRelations.Count > 0" />
                                                                    <DxToolbarItem Text="Column Chooser" Click="ColumnChooserButton_Click" BeginGroup="true" IconCssClass="fa-solid fa-table-columns" />
                                                                    <DxToolbarItem Text="Export" BeginGroup="true" IconCssClass="fa-solid fa-file-export">
                                                                        <Items>
                                                                            <DxToolbarItem Text="To CSV" Click="ExportCsvItem_Click" />
                                                                            <DxToolbarItem Text="To XLSX" Click="ExportXlsxItem_Click" />
                                                                            <DxToolbarItem Text="To XLS" Click="ExportXlsItem_Click" />
                                                                        </Items>
                                                                    </DxToolbarItem>
                                                                </DxToolbar>
                                                            </ToolbarTemplate>
                                                            <Columns>
                                                                <DxGridSelectionColumn Width="15px" />
                                                                <DxGridDataColumn FieldName="FamilyMember.Name" Caption="Family Member" SortIndex="0" />
                                                                <DxGridDataColumn FieldName="Family.Relation" Caption="Relation" />
                                                            </Columns>
                                                            <EditFormTemplate Context="EditFormContext2">
                                                                @{
                                                                    var a = (PatientFamilyRelationDto)EditFormContext2.EditModel;
                                                                }
                                                                <DxFormLayout CssClass="w-100">
                                                                    <DxFormLayoutItem CaptionCssClass="normal-caption" Caption="Patient" ColSpanMd="12">
                                                                        <DxComboBox ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" FilteringMode="@DataGridFilteringMode.Contains"
                                                                                    Data="@Patiens"
                                                                                    NullText="Select Family Member..."
                                                                                    @bind-Value="@a.FamilyMemberId"
                                                                                    TextFieldName="Name"
                                                                                    ValueFieldName="Id">
                                                                        </DxComboBox>
                                                                        <ValidationMessage For="@(()=> a.FamilyMemberId)"   />
                                                                    </DxFormLayoutItem>
                                                                    <DxFormLayoutItem CaptionCssClass=" normal-caption" Caption="Relation" ColSpanMd="12">
                                                                        <DxComboBox ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" FilteringMode="@DataGridFilteringMode.Contains"
                                                                                    Data="@Families"
                                                                                    NullText="Select Relation..."
                                                                                    @bind-Value="@a.FamilyId"
                                                                                    TextFieldName="Relation"
                                                                                    ValueFieldName="Id">
                                                                        </DxComboBox>
                                                                        <ValidationMessage For="@(()=> a.FamilyId)"   />
                                                                    </DxFormLayoutItem>
                                                                </DxFormLayout>
                                                            </EditFormTemplate>
                                                        </DxGrid>
                                                    </DxLoadingPanel>
                                                </Items>
                                            </DxFormLayoutGroup>
                                        </DxFormLayout>
                                        <div class="ml-2 mt-1 mb-2 mr-3">
                                            <div class="row justify-content-end">
                                                <div class="col-auto align-self-end">
                                                    <DxButton RenderStyleMode="@ButtonRenderStyleMode.Outline"
                                                              Text="Save"
                                                              RenderStyle="ButtonRenderStyle.Info"
                                                              SubmitFormOnClick="true"
                                                              IconCssClass="fa-solid fa-floppy-disk"
                                                              CssClass="w-20 ml" />
                                                    <DxButton RenderStyleMode="@ButtonRenderStyleMode.Outline"
                                                              Text="Cancel"
                                                              RenderStyle="ButtonRenderStyle.Danger"
                                                              Click="OnCancel"
                                                              IconCssClass="fa-solid fa-xmark"
                                                              CssClass="w-20 ml" />
                                                </div>
                                            </div>
                                        </div>
                                    </EditForm>
                                    <div class="mt-2"></div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
}
