@page "/patient/patient-data"
@using System.ComponentModel.DataAnnotations
@using static McDermott.Web.Helper
@rendermode InteractiveServer

<PageTitle>Patient Data</PageTitle>
<McDermott.Web.Components.Layout.BaseContentHeaderLayout Title="Patient Data" />
<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <DxFormLayout CssClass="mt">
                            <DxFormLayoutGroup Caption="New Form Patien" ColSpanMd="12">
                                <DxFormLayout CssClass="w-100">
                                    <DxFormLayoutItem Caption="Name:" BeginRow="true" ColSpanMd="12">
                                        <DxTextBox @bind-Text="@Name" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Medical record:" BeginRow="true" ColSpanMd="6">
                                        <DxSpinEdit @bind-Value="@YearsWorked" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Tanggal Lahir:" ColSpanMd="6">
                                        <DxDateEdit @bind-Date="@BirthDate" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Jenis Kelamin:" BeginRow="true">
                                        <DxComboBox Data="@Data"
                                                    FilteringMode="DataGridFilteringMode.Contains" @bind-Value="bindData" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Age:" ColSpanMd="6">
                                        <DxSpinEdit @bind-Value="@YearsWorked" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Primary care Doctor:" BeginRow="true">
