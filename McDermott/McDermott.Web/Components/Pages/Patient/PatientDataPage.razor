                                    </DxFormLayoutGroup>

                                    <DxFormLayoutGroup Caption="Kontak Darurat" ColSpanMd="6">
                                        <DxFormLayoutItem Caption="Nama :" BeginRow="true" ColSpanMd="12">
                                            <DxTextBox @bind-Text="@Name" />
