                                        <DxSpinEdit @bind-Value="@YearsWorked" />
                                    </DxFormLayoutItem> *@
                                    
                                </DxFormLayout>
                            </DxFormLayoutGroup>
                        </DxFormLayout>
                        
                      
                    

                           







                              

