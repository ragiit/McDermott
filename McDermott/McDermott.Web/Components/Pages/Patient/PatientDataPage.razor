                                                    FilteringMode="DataGridFilteringMode.Contains" @bind-Value="bindData" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Departements:" >
                                        <DxComboBox Data="@Data"
                                                    FilteringMode="DataGridFilteringMode.Contains" @bind-Value="bindData" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Tittle:" BeginRow="true">
                                        <DxComboBox Data="@Data"
                                                    FilteringMode="DataGridFilteringMode.Contains" @bind-Value="bindData" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Branch:">
                                        <DxComboBox Data="@Data"
                                                    FilteringMode="DataGridFilteringMode.Contains" @bind-Value="bindData" />
                                    </DxFormLayoutItem>
                                    
                                    <DxFormLayoutItem Caption="Tags:">
                                        <DxComboBox Data="@Data"
                                                    FilteringMode="DataGridFilteringMode.Contains" @bind-Value="bindData" />
                                    </DxFormLayoutItem>
                                    
                                    @* <DxFormLayoutItem Caption="No.Telepon:" BeginRow="true" ColSpanMd="6">
                                        <DxSpinEdit @bind-Value="@YearsWorked" />
                                    </DxFormLayoutItem>
