                                        <DxSpinEdit @bind-Value="@YearsWorked" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Pekerjaan:" ColSpanMd="6">
                                        <DxTextBox @bind-Text="@Position" />
