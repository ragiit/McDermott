@page "/config/user"
@using static McDermott.Web.Helper
@rendermode InteractiveServer

<PageTitle>User</PageTitle>

<div class="wrapper">

    <McDermott.Web.Components.Layout.BaseContentHeaderLayout Title="User" />

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card">
                        @if (!ShowForm)
                        {
                            <DxGrid @ref="Grid"
                                    Data="Users"
                                    PageSize="10"
                                    @bind-SelectedDataItems="@SelectedDataItems"
                                    FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
                                    KeyFieldName="Id"
                                    CustomizeDataRowEditor="Grid_CustomizeDataRowEditor"
                                    EditModelSaving="OnSave"
                                    DataItemDeleting="OnDelete"
                                    EditMode="GridEditMode.PopupEditForm"
                                    PopupEditFormCssClass="pw-800"
                                    AllowSelectRowByClick="true"
                                    PagerPosition="GridPagerPosition.Bottom"
                                    PageSizeSelectorVisible="true"
                                    PageSizeSelectorItems="@(new int[] { 10, 20, 50, 100 })"
                                    PageSizeSelectorAllRowsItemVisible="true"
                                    PagerSwitchToInputBoxButtonCount="10"
                                    FocusedRowEnabled="true"
                                    PagerVisibleNumericButtonCount="10"
                                    FocusedRowChanged="Grid_FocusedRowChanged"
                                    ShowGroupPanel="true"
                                    AutoExpandAllGroupRows="true"
                                    CustomizeEditModel="Grid_CustomizeEditModel"
                                    ShowFilterRow="true"
                                    CustomizeElement="Grid_CustomizeElement"
                                    ShowSearchBox="true"
                                    SelectAllCheckboxMode="GridSelectAllCheckboxMode.Mixed"
                                    KeyboardNavigationEnabled="true">
                                <ToolbarTemplate>
                                    <DxToolbar ItemRenderStyleMode="ToolbarRenderStyleMode.Contained">
                                        <DxToolbarItem Text="New" Click="NewItem_Click" IconCssClass="grid-toolbar-new" />
                                        <DxToolbarItem Text="Edit" Click="EditItem_Click" IconCssClass="grid-toolbar-edit" Enabled="EditItemsEnabled" />
                                        <DxToolbarItem Text="Delete" Click="DeleteItem_Click" IconCssClass="grid-toolbar-delete" Enabled="SelectedDataItems != null" />`
                                        <DxToolbarItem Text="Column Chooser" Click="ColumnChooserButton_Click" BeginGroup="true" IconCssClass="grid-toolbar-column-chooser" />
                                        <DxToolbarItem Text="Export" IconCssClass="grid-toolbar-export">
                                            <Items>
                                                <DxToolbarItem Text="To CSV" Click="ExportCsvItem_Click" />
                                                <DxToolbarItem Text="To XLSX" Click="ExportXlsxItem_Click" />
                                                <DxToolbarItem Text="To XLS" Click="ExportXlsItem_Click" />
                                            </Items>
                                        </DxToolbarItem>
                                        <DxToolbarItem Text="Upload" id="upload" IconCssClass="grid-toolbar-upload" />
                                    </DxToolbar>
                                </ToolbarTemplate>
                                <Columns>
                                    <DxGridSelectionColumn Width="15px" />
                                    <DxGridDataColumn FieldName="Name" SortIndex="0" />
                                    <DxGridDataColumn FieldName="Email" />
                                    <DxGridDataColumn FieldName="Group.Name" Caption="Group" />
                                </Columns>
                            </DxGrid>
                        }

                        @if (ShowForm)
                        {
                            <DxToolbar ItemRenderStyleMode="ToolbarRenderStyleMode.Contained">
                                <DxToolbarItem Text="Save" Click="OnSave" IconCssClass="grid-toolbar-new" />
                                <DxToolbarItem Text="Cancel" Click="OnCancel" IconCssClass="grid-toolbar-edit" />
                            </DxToolbar>

                            <DxFormLayout CssClass="mt" Data="UserForm" ItemUpdating="@((pair) => OnItemUpdating(pair.Key, pair.Value))">
                                <DxFormLayoutGroup Caption="General Information" ColSpanMd="12">
                                    <DxFormLayoutItem Caption="Name:">
                                        <DxTextBox @bind-Text="@UserForm.Name" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Name" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Mobile Phone:">
                                        <DxSpinEdit @bind-Value="@UserForm.MobilePhone" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Mobile Phone"></DxSpinEdit>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Home Phone Number:">
                                        <DxSpinEdit @bind-Value="@UserForm.HomePhoneNumber" NullText="Home Phone Number"></DxSpinEdit>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Email:">
                                        <DxTextBox @bind-Text="@UserForm.Email" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Email" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Religion:">
                                        <DxComboBox Data="@Religions" @bind-Value="@UserForm.ReligionId" TextFieldName="Name"
                                                    ValueFieldName="Id" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="NPWP:">
                                        <DxTextBox @bind-Text="@UserForm.Npwp" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="NPWP" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Identity Type:">
                                        <DxComboBox Data="@IdentityTypes" @bind-Value="@UserForm.TypeId"></DxComboBox>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Expired Identity:" Visible="@(@UserForm.TypeId == null ? false : @UserForm.TypeId.Contains("VISA"))">
                                        <DxDateEdit @bind-Date="@UserForm.ExpiredId" Mask="@DateTimeMask.ShortDate" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Emergency Name:">
                                        <DxTextBox @bind-Text="@UserForm.EmergencyName" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Emergency Name" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Emergency Relation:">
                                        <DxTextBox @bind-Text="@UserForm.EmergencyRelation" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Emergency Relation" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Emergency Email:">
                                        <DxTextBox @bind-Text="@UserForm.EmergencyEmail" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Emergency Email" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Date of Birth:">
                                        <DxDateEdit @bind-Date="@UserForm.DateOfBirth" Mask="@DateTimeMask.ShortDate" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Emergency Phone:">
                                        <DxSpinEdit @bind-Value="@UserForm.EmergencyPhone" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Emergency Phone" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Gender:">
                                        <DxComboBox Data="@Genders" @bind-Value="@UserForm.GenderId" TextFieldName="Name"
                                                    ValueFieldName="Id" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Martial Status:">
                                        <DxComboBox Data="@MartialStatuss" @bind-Value="@UserForm.MartialStatus"></DxComboBox>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Domicile Address:" ColSpanMd="6">
                                        <Template>
                                            <DxGridLayout>
                                                <Rows>
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                </Rows>
                                                <Columns>
                                                    <DxGridLayoutColumn />
                                                    <DxGridLayoutColumn />
                                                </Columns>
                                                <Items>
                                                    <DxGridLayoutItem Row="0" Column="0" ColumnSpan="12">
                                                        <Template>
                                                            <DxTextBox @bind-Text="@UserForm.DomicileAddress1" NullText="Street 1..."></DxTextBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="1" Column="0" ColumnSpan="12">
                                                        <Template>
                                                            <DxTextBox @bind-Text="@UserForm.DomicileAddress2" CssClass="mt" NullText="Street 2..."></DxTextBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="2" Column="0" CssClass="mt">
                                                        <Template>
                                                            <DxComboBox Data="@Provinces"
                                                                        NullText="Select Province..."
                                                                        @bind-Value="@UserForm.DomicileProvinceId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="2" Column="1" CssClass="mt ml">
                                                        <Template>
                                                            <DxComboBox Data="@Cities"
                                                                        NullText="Select City..."
                                                                        @bind-Value="@UserForm.DomicileCityId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="3" Column="0" CssClass="mt">
                                                        <Template>
                                                            <DxComboBox Data="@Districts"
                                                                        NullText="Select District..."
                                                                        @bind-Value="@UserForm.DomicileDistrictId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="3" Column="1" CssClass="mt ml">
                                                        <Template>
                                                            <DxComboBox Data="@Villages"
                                                                        NullText="Select Village..."
                                                                        @bind-Value="@UserForm.DomicileVillageId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="4" Column="0" ColumnSpan="12" CssClass="mt">
                                                        <Template>
                                                            <DxTextBox @bind-Text="@UserForm.DomicileRtRw" NullText="RT/RW..."></DxTextBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="5" Column="0" ColumnSpan="12" CssClass="mt">
                                                        <Template>
                                                            <DxComboBox Data="@Countries"
                                                                        NullText="Select Country..."
                                                                        @bind-Value="@UserForm.DomicileCountryId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                </Items>
                                            </DxGridLayout>
                                        </Template>
                                    </DxFormLayoutItem>

                                    <DxFormLayoutItem Caption="KTP Address:" ColSpanMd="6">
                                        <Template>
                                            <DxGridLayout>
                                                <Rows>
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                    <DxGridLayoutRow />
                                                </Rows>
                                                <Columns>
                                                    <DxGridLayoutColumn />
                                                    <DxGridLayoutColumn />
                                                </Columns>
                                                <Items>
                                                    <DxGridLayoutItem Row="0" Column="0" ColumnSpan="12">
                                                        <Template>
                                                            <DxTextBox @bind-Text="@UserForm.IdCardAddress1" NullText="Street 1..."></DxTextBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="1" Column="0" ColumnSpan="12">
                                                        <Template>
                                                            <DxTextBox @bind-Text="@UserForm.IdCardAddress2" CssClass="mt" NullText="Street 2..."></DxTextBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="2" Column="0" CssClass="mt">
                                                        <Template>
                                                            <DxComboBox Data="@Provinces"
                                                                        NullText="Select Province..."
                                                                        @bind-Value="@UserForm.IdCardProvinceId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="2" Column="1" CssClass="mt ml">
                                                        <Template>
                                                            <DxComboBox Data="@Cities"
                                                                        NullText="Select City..."
                                                                        @bind-Value="@UserForm.IdCardCityId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="3" Column="0" CssClass="mt">
                                                        <Template>
                                                            <DxComboBox Data="@Districts"
                                                                        NullText="Select District..."
                                                                        @bind-Value="@UserForm.IdCardDistrictId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="3" Column="1" CssClass="mt ml">
                                                        <Template>
                                                            <DxComboBox Data="@Villages"
                                                                        NullText="Select Village..."
                                                                        @bind-Value="@UserForm.IdCardVillageId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="4" Column="0" ColumnSpan="12" CssClass="mt">
                                                        <Template>
                                                            <DxTextBox @bind-Text="@UserForm.IdCardRtRw" NullText="RT/RW..."></DxTextBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                    <DxGridLayoutItem Row="5" Column="0" ColumnSpan="12" CssClass="mt">
                                                        <Template>
                                                            <DxComboBox Data="@Countries"
                                                                        NullText="Select Country..."
                                                                        @bind-Value="@UserForm.IdCardCountryId"
                                                                        TextFieldName="Name"
                                                                        ValueFieldName="Id">
                                                            </DxComboBox>
                                                        </Template>
                                                    </DxGridLayoutItem>
                                                </Items>
                                            </DxGridLayout>
                                        </Template>
                                    </DxFormLayoutItem>

                                    <DxGridLayout ColumnSpacing="6">
                                        <Rows>
                                            <DxGridLayoutRow />
                                        </Rows>
                                        <Columns>
                                            <DxGridLayoutColumn />
                                            <DxGridLayoutColumn />
                                            <DxGridLayoutColumn />
                                            <DxGridLayoutColumn />
                                        </Columns>
                                        <Items>
                                            <DxGridLayoutItem Row="0" Column="0">
                                                <Template>
                                                    <DxFormLayoutItem Caption="Allow Login:">
                                                        <DxCheckBox @bind-Checked="@UserForm.IsUser" />
                                                    </DxFormLayoutItem>
                                                </Template>
                                            </DxGridLayoutItem>
                                            <DxGridLayoutItem Row="0" Column="1" CssClass="layout-margin-l">
                                                <Template>
                                                    <DxFormLayoutItem Caption="Practitioner:">
                                                        <DxCheckBox @bind-Checked="@UserForm.IsDoctor" />
                                                    </DxFormLayoutItem>
                                                </Template>
                                            </DxGridLayoutItem>
                                            <DxGridLayoutItem Row="0" Column="2" CssClass="layout-margin-l">
                                                <Template>
                                                    <DxFormLayoutItem Caption="Employee:">
                                                        <DxCheckBox @bind-Checked="@UserForm.IsEmployee" />
                                                    </DxFormLayoutItem>
                                                </Template>
                                            </DxGridLayoutItem>
                                            <DxGridLayoutItem Row="0" Column="3" CssClass="layout-margin-l">
                                                <Template>
                                                    <DxFormLayoutItem Caption="Patient:">
                                                        <DxCheckBox @bind-Checked="@UserForm.IsPatient" />
                                                    </DxFormLayoutItem>
                                                </Template>
                                            </DxGridLayoutItem>
                                        </Items>
                                    </DxGridLayout>

                                </DxFormLayoutGroup>

                                <DxFormLayoutGroup Caption="User" ColSpanMd="12" Visible="@Convert.ToBoolean(UserForm.IsUser)">
                                    <Items>
                                        <DxFormLayoutItem Caption="Password:">
                                            <DxTextBox Password="true" @bind-Text="@UserForm.Password"></DxTextBox>
                                        </DxFormLayoutItem>
                                        <DxFormLayoutItem Caption="Group:">
                                            <DxComboBox Data="@Groups"
                                                        NullText="Select Group..."
                                                        @bind-Value="@UserForm.GroupId"
                                                        TextFieldName="Name"
                                                        ValueFieldName="Id">
                                            </DxComboBox>
                                        </DxFormLayoutItem>
                                    </Items>
                                </DxFormLayoutGroup>

                                <DxFormLayoutGroup Caption="Practitioner License" ColSpanMd="12" Visible="@Convert.ToBoolean(UserForm.IsDoctor)">
                                    <DxGridLayout ColumnSpacing="3">
                                        <Rows>
                                            <DxGridLayoutRow />
                                        </Rows>
                                        <Columns>
                                            <DxGridLayoutColumn />
                                            <DxGridLayoutColumn />
                                        </Columns>
                                        <Items>
                                            <DxGridLayoutItem Row="0" Column="0">
                                                <Template>
                                                    <DxFormLayoutItem Caption="Physicion:">
                                                        <DxCheckBox Checked="@Convert.ToBoolean(UserForm.IsPhysicion)" CheckedChanged="@((bool value) => OnCheckedPhysicionChanged(value))" />
                                                    </DxFormLayoutItem>
                                                </Template>
                                            </DxGridLayoutItem>
                                            <DxGridLayoutItem Row="0" Column="1" CssClass="layout-margin-l">
                                                <Template>
                                                    <DxFormLayoutItem Caption="Nurse:">
                                                        <DxCheckBox Checked="@Convert.ToBoolean(UserForm.IsNurse)" CheckedChanged="@((bool value) => OnCheckedNurseChanged(value))" />
                                                    </DxFormLayoutItem>
                                                </Template>
                                            </DxGridLayoutItem>
                                        </Items>
                                    </DxGridLayout>

                                    <DxFormLayoutItem Caption="Sip Number:">
                                        <DxTextBox @bind-Text="@UserForm.SipNo" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Sip Number" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Str Number:">
                                        <DxTextBox @bind-Text="@UserForm.StrNo" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Str Number" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Sip File:">
                                        <DxTextBox @bind-Text="@UserForm.SipFile" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="Sip File" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Str Expired:">
                                        <DxDateEdit @bind-Date="@UserForm.StrExp" Mask="@DateTimeMask.ShortDate" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Sip Expired:">
                                        <DxDateEdit @bind-Date="@UserForm.SipExp" Mask="@DateTimeMask.ShortDate" />
                                    </DxFormLayoutItem>
                                </DxFormLayoutGroup>

                                <DxFormLayoutGroup Caption="Employee" ColSpanMd="12" Visible="@Convert.ToBoolean(UserForm.IsEmployee)">
                                    <DxFormLayoutItem Caption="Job Position:">
                                        <DxComboBox Data="@JobPositions"
                                                    NullText="Select Job Position..."
                                                    @bind-Value="@UserForm.JobPositionId"
                                                    TextFieldName="Name"
                                                    ValueFieldName="Id">
                                        </DxComboBox>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="BPJS TK Number:">
                                        <DxSpinEdit @bind-Value="@UserForm.NoBpjsTk" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="BPJS TK Number"></DxSpinEdit>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Department:">
                                        <DxComboBox Data="@Departments"
                                                    NullText="Select Department..."
                                                    @bind-Value="@UserForm.DepartmentId"
                                                    TextFieldName="Name"
                                                    ValueFieldName="Id">
                                        </DxComboBox>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Join Date:">
                                        <DxDateEdit @bind-Date="@UserForm.JoinDate" Mask="@DateTimeMask.ShortDate" />
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="BPJS KS Number:">
                                        <DxSpinEdit @bind-Value="@UserForm.NoBpjsKs" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" NullText="BPJS KS Number"></DxSpinEdit>
                                    </DxFormLayoutItem>
                                </DxFormLayoutGroup>
                            </DxFormLayout>
                            <DxGridLayout ColumnSpacing="1">
                                <Rows>
                                    <DxGridLayoutRow />
                                    <DxGridLayoutRow />
                                </Rows>
                                <Columns>
                                    <DxGridLayoutColumn />
                                </Columns>
                                <Items>
                                    <DxGridLayoutItem Row="0" Column="1">
                                        <Template>
                                            <DxButton RenderStyleMode="@ButtonRenderStyleMode.Outline"
                                                      Text="Save"
                                                      Click="OnSave"
                                                      CssClass="w-20 ml" />
                                        </Template>
                                    </DxGridLayoutItem>
                                    <DxGridLayoutItem Row="1" Column="0">
                                        <Template>
                                            <DxButton RenderStyleMode="@ButtonRenderStyleMode.Outline"
                                                      Text="Cancel"
                                                      Click="OnCancel"
                                                      CssClass="w-20 ml" />
                                        </Template>
                                    </DxGridLayoutItem>
                                </Items>
                            </DxGridLayout>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div> 